<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="overlay" module="marketing" route="home" schemaVersion="1.0.0" contentVersion="1.1.0" tenant="acme" locale="en-US">
  <Overlay>
    <Regions>
      <Region id="feature-grid" operation="replace">
        <Component id="metadata-feature" type="FeatureSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="eyebrow" kind="static">Metadata building blocks</Prop>
            <Prop name="title" kind="binding" contract="featureShowcase.title"/>
            <Prop name="description" kind="binding" contract="featureShowcase.description"/>
            <Prop name="highlight" kind="binding" contract="featureShowcase.highlight"/>
            <Prop name="features" kind="binding" contract="featureShowcase.features"/>
            <Prop name="primaryCta" kind="action" actionId="explore-blueprints"/>
            <Prop name="secondaryCta" kind="action" actionId="launch-playbook"/>
          </Props>
        </Component>
        <Component id="momentum-stats" type="StatsSection">
          <Props>
            <Prop name="variant" kind="static">velocity-panel</Prop>
            <Prop name="eyebrow" kind="static">Operational velocity</Prop>
            <Prop name="headline" kind="binding" contract="momentumStats.headline"/>
            <Prop name="description" kind="binding" contract="momentumStats.description"/>
            <Prop name="metrics" kind="binding" contract="momentumStats.metrics"/>
            <Prop name="highlights" kind="binding" contract="momentumStats.highlights"/>
            <Prop name="primaryCta" kind="action" actionId="see-catalog"/>
          </Props>
        </Component>
        <Component id="activation-cta" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="badge" kind="static">Acme Ã— StewardTrack</Prop>
            <Prop name="eyebrow" kind="static">Blueprint activation</Prop>
            <Prop name="headline" kind="binding" contract="ctaCopy.headline"/>
            <Prop name="description" kind="binding" contract="ctaCopy.description"/>
            <Prop name="checklist" kind="binding" contract="ctaCopy.checklist"/>
            <Prop name="primaryCta" kind="action" actionId="launch-playbook"/>
            <Prop name="secondaryCta" kind="action" actionId="connect-team"/>
          </Props>
        </Component>
        <Component id="newsletter-invite" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">product</Prop>
            <Prop name="badge" kind="static">Stay aligned</Prop>
            <Prop name="eyebrow" kind="static">Metadata dispatch</Prop>
            <Prop name="headline" kind="binding" contract="newsletterCopy.headline"/>
            <Prop name="description" kind="binding" contract="newsletterCopy.description"/>
            <Prop name="checklist" kind="binding" contract="newsletterCopy.checklist"/>
            <Prop name="logos" kind="binding" contract="newsletterCopy.logos"/>
            <Prop name="primaryCta" kind="action" actionId="subscribe-updates"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <Components>
      <Component id="hero-section" operation="merge">
        <Props>
          <Prop name="variant" kind="static">split</Prop>
          <Prop name="badge" kind="static">Acme launchpad</Prop>
          <Prop name="eyebrow" kind="static">StewardTrack metadata</Prop>
          <Prop name="headline" kind="binding" contract="heroCopy.headline"/>
          <Prop name="description" kind="binding" contract="heroCopy.description"/>
          <Prop name="highlights" kind="binding" contract="heroCopy.highlights"/>
          <Prop name="metrics" kind="binding" contract="heroCopy.metrics"/>
          <Prop name="primaryCta" kind="action" actionId="launch-playbook"/>
          <Prop name="secondaryCta" kind="action" actionId="view-docs"/>
        </Props>
      </Component>
    </Components>
    <DataSources>
      <DataSource id="heroCopy" kind="static" operation="replace">
        <Contract>
          <Field name="headline" path="headline" description="Binding for hero-section.headline"/>
          <Field name="description" path="description" description="Binding for hero-section.description"/>
          <Field name="highlights" path="highlights" description="Binding for hero-section.highlights"/>
          <Field name="metrics" path="metrics" description="Binding for hero-section.metrics"/>
        </Contract>
        <Data>
          <Field name="headline">
            <Value>Operationalize metadata building blocks in days</Value>
          </Field>
          <Field name="description">
            <Value>Compose heroes, stats, and CTAs from reusable XML so every steward sees a guided path to value.</Value>
          </Field>
          <Field name="highlights">
            <Array>
              <Value>Launch dynamic experiences without rewriting React</Value>
              <Value>Blend blueprint defaults with tenant-specific overlays</Value>
              <Value>Measure adoption with every versioned release</Value>
