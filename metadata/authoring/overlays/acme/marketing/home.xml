      <DataSource id="newsletterCopy" kind="static">
        <Contract>
          <Field name="headline" path="headline" description="Binding for newsletter-invite.headline"/>
          <Field name="description" path="description" description="Binding for newsletter-invite.description"/>
          <Field name="checklist" path="checklist" description="Binding for newsletter-invite.checklist"/>
          <Field name="logos" path="logos" description="Binding for newsletter-invite.logos"/>
        </Contract>
        <Data>
          <Field name="headline">
            <Value>Join the metadata dispatch</Value>
          </Field>
          <Field name="description">
            <Value>Monthly breakdowns of the newest dynamic sections, overlays, and performance benchmarks.</Value>
          </Field>
          <Field name="checklist">
            <Array>
              <Value>Blueprint spotlights from high-performing teams</Value>
              <Value>Telemetry deep dives to replicate winning journeys</Value>
              <Value>Early access to upcoming building blocks</Value>
            </Array>
          </Field>
          <Field name="logos">
            <Array>
              <Value>Northwind</Value>
              <Value>Globex</Value>
              <Value>Inertia</Value>
              <Value>Parallel</Value>
              <Value>Brightline</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="launch-playbook" kind="link">
        <Config>
          <Label>Launch the playbook</Label>
          <Url>/playbooks/metadata</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="explore-blueprints" kind="link">
        <Config>
          <Label>Explore blueprints</Label>
          <Url>/blueprints/catalog</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="see-catalog" kind="link">
        <Config>
          <Label>See all building blocks</Label>
          <Url>/metadata/blocks</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
      <Action id="connect-team" kind="link">
        <Config>
          <Label>Connect with our team</Label>
          <Url>/contact/solutions</Url>
          <Variant>outline</Variant>
        </Config>
      </Action>
      <Action id="subscribe-updates" kind="link">
        <Config>
          <Label>Subscribe for updates</Label>
          <Url>/resources/metadata-dispatch</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
    </Actions>
  </Overlay>
</PageDefinition>
