<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/support-hub" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-support-hub">
    <Title>UI Block: Support hub CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-support-hub" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">contact</Prop>
            <Prop name="eyebrow" kind="static">Support programs</Prop>
            <Prop name="headline" kind="static">Reach the right StewardTrack specialist</Prop>
            <Prop name="description" kind="static">Choose the channel aligned with your question and connect with solution architects, enablement leads, or billing experts.</Prop>
            <Prop name="contactMethods" kind="binding" contract="supportContacts.items"/>
            <Prop name="primaryCta" kind="action" actionId="open-ticket"/>
            <Prop name="secondaryCta" kind="action" actionId="join-office-hours"/>
            <Prop name="tertiaryCta" kind="action" actionId="chat-live"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="supportContacts" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for cta-support-hub.contactMethods"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Solution architecture</Value>
                </Field>
                <Field name="value">
                  <Value>Architecture@StewardTrack.com</Value>
                </Field>
                <Field name="description">
                  <Value>For integration design, data modeling, and governance questions.</Value>
                </Field>
                <Field name="url">
                  <Value>mailto:architecture@StewardTrack.com</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Enablement office hours</Value>
                </Field>
                <Field name="value">
                  <Value>Every Tuesday â€¢ 9:00 AM PT</Value>
                </Field>
                <Field name="description">
                  <Value>Live Q&amp;amp;A with customer success and product specialists.</Value>
                </Field>
                <Field name="url">
                  <Value>/events/office-hours</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Billing support</Value>
                </Field>
                <Field name="value">
                  <Value>+1 (415) 555-2045</Value>
                </Field>
                <Field name="description">
                  <Value>Account changes, invoices, and procurement documentation.</Value>
                </Field>
                <Field name="url">
                  <Value>tel:+14155552045</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="open-ticket" kind="link">
        <Config>
          <Label>Open a ticket</Label>
          <Url>/support/ticket</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="join-office-hours" kind="link">
        <Config>
          <Label>Join office hours</Label>
          <Url>/events/office-hours/register</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="chat-live" kind="link">
        <Config>
          <Label>Chat live</Label>
          <Url>/support/live-chat</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
