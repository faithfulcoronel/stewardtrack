<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="header/search-hub" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-header-search-hub">
    <Title>UI Block: Search hub header</Title>
    <Regions>
      <Region id="header">
        <Component id="header-search-hub" type="HeaderSection">
          <Props>
            <Prop name="variant" kind="static">search-hub</Prop>
            <Prop name="badge" kind="static">Resource library</Prop>
            <Prop name="headline" kind="static">Search the enablement hub</Prop>
            <Prop name="description" kind="static">A practical header for knowledge bases or partner portals that features instant search and curated tags.</Prop>
            <Prop name="search" kind="binding" contract="searchConfig.value"/>
            <Prop name="highlights" kind="binding" contract="searchTags.value"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="searchConfig" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-search-hub.search"/>
        </Contract>
        <Data>
          <Field name="placeholder">
            <Value>Search playbooks, templates, or policies</Value>
          </Field>
          <Field name="buttonLabel">
            <Value>Find resources</Value>
          </Field>
          <Field name="helpText">
            <Value>Try activation playbook, sales onboarding, or partner kit</Value>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="searchTags" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-search-hub.highlights"/>
        </Contract>
        <Data>
          <Array>
            <Value>Lifecycle</Value>
            <Value>Revenue operations</Value>
            <Value>Product marketing</Value>
            <Value>Enablement</Value>
            <Value>Adoption</Value>
          </Array>
        </Data>
      </DataSource>
    </DataSources>
  </Page>
</PageDefinition>
