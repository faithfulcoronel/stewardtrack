<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="hero/conversion" schemaVersion="1.0.0" contentVersion="2.0.0" locale="en-US">
  <Page id="ui-blocks-hero-conversion">
    <Title>UI Block: Conversion hero</Title>
    <Regions>
      <Region id="hero">
        <Component id="hero-conversion" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stacked</Prop>
            <Prop name="badge" kind="static">Conversion playbook</Prop>
            <Prop name="headline" kind="static">Personalize every hero with metadata-driven targeting</Prop>
            <Prop name="description" kind="static">Experiment with copy, CTAs, and overlays in real time while surfacing the results in a stats ribbon.</Prop>
            <Prop name="metrics" kind="binding" contract="conversionData.items"/>
            <Prop name="primaryCta" kind="action" actionId="build-experiment"/>
            <Prop name="secondaryCta" kind="action" actionId="view-template"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="conversionData" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for hero-conversion.metrics"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Variant uplift</Value>
                </Field>
                <Field name="value">
                  <Value>+18%</Value>
                </Field>
                <Field name="caption">
                  <Value>Median improvement across 8 segments.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Segmentation rules</Value>
                </Field>
                <Field name="value">
                  <Value>24</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Runtime targeting</Value>
                </Field>
                <Field name="value">
                  <Value>Real-time</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Overlay updates</Value>
                </Field>
                <Field name="value">
                  <Value>0 deploys</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="build-experiment" kind="link">
        <Config>
          <Label>Build experiment</Label>
          <Url>/experiments/new</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-template" kind="link">
        <Config>
          <Label>View template</Label>
          <Url>/templates/conversion-hero</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
