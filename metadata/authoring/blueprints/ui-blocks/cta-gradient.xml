<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/gradient"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-gradient">
    <Title>UI Block: Gradient CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-gradient" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">gradient</Prop>
            <Prop name="badge" kind="static">Lifecycle automation</Prop>
            <Prop name="eyebrow" kind="static">Campaign operations</Prop>
            <Prop name="headline" kind="static">Coordinate launches across every channel</Prop>
            <Prop name="description" kind="static">Flowspace orchestrates workflows so teams can plan, execute, and learn from the same operating picture.</Prop>
            <Prop name="metrics" kind="binding" source="gradientMetrics" path="items" />
            <Prop name="primaryCta" kind="action" actionId="book-planning-demo" />
            <Prop name="secondaryCta" kind="action" actionId="view-roadmap" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="gradientMetrics" kind="static">
        <Json><![CDATA[
          {
            "items": [
              { "label": "Teams aligned", "value": "12" },
              { "label": "Playbooks automated", "value": "36" },
              { "label": "Launch cadence", "value": "Weekly" }
            ]
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="book-planning-demo" kind="link">
        <Config>
          <Label>Book planning demo</Label>
          <Url>/demos/orchestration</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-roadmap" kind="link">
        <Config>
          <Label>View roadmap</Label>
          <Url>/roadmap</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
