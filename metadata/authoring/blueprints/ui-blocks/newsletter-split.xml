<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="newsletter/split" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-newsletter-split">
    <Title>UI Block: Newsletter split spotlight</Title>
    <Regions>
      <Region id="newsletter">
        <Component id="newsletter-split" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="badge" kind="static">Weekly strategy</Prop>
            <Prop name="eyebrow" kind="static">StewardTrack Revenue Review</Prop>
            <Prop name="headline" kind="static">Grow faster with the Revenue Review</Prop>
            <Prop name="description" kind="static">Every Tuesday we translate pipeline data into one-page growth plans. See what to automate, where to double down, and which motions to sunset.</Prop>
            <Prop name="checklist" kind="binding" contract="splitChecklist.items"/>
            <Prop name="logos" kind="binding" contract="splitLogos.items"/>
            <Prop name="form" kind="binding" contract="splitForm.value"/>
            <Prop name="highlight" kind="static">See exactly which experiments to run next.</Prop>
            <Prop name="image" kind="binding" contract="splitImage.value"/>
            <Prop name="primaryCta" kind="action" actionId="view-archive"/>
            <Prop name="secondaryCta" kind="action" actionId="share-team"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="splitChecklist" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for newsletter-split.checklist"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Revenue-qualified experiment plans tailored to your stage.</Value>
              <Value>Signals from hundreds of B2B plays across the StewardTrack network.</Value>
              <Value>Templates for running impact reviews with your GTM pod.</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="splitLogos" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for newsletter-split.logos"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Atlas Labs</Value>
              <Value>Northwind</Value>
              <Value>Figma</Value>
              <Value>Metaplane</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="splitForm" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for newsletter-split.form"/>
        </Contract>
        <Data>
          <Field name="placeholder">
            <Value>ops-lead@company.com</Value>
          </Field>
          <Field name="buttonLabel">
            <Value>Join the briefing</Value>
          </Field>
          <Field name="disclaimer">
            <Value>Arrives every Tuesday. No fluff, just experiments that worked.</Value>
          </Field>
          <Field name="url">
            <Value>/newsletter/revenue-review/signup</Value>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="splitImage" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for newsletter-split.image"/>
        </Contract>
        <Data>
          <Field name="src">
            <Value>https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&amp;fit=crop&amp;w=1200&amp;q=80</Value>
          </Field>
          <Field name="alt">
            <Value>Revenue dashboard preview</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="view-archive" kind="link">
        <Config>
          <Label>View past issues</Label>
          <Url>/newsletter/revenue-review/archive</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="share-team" kind="link">
        <Config>
          <Label>Share with my team</Label>
          <Url>/newsletter/revenue-review/share</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
