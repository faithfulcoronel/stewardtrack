<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="testimonials/education-transformation" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-testimonials-education-transformation">
    <Title>UI Block: Testimonials - Education transformation</Title>
    <Regions>
      <Region id="testimonials">
        <Component id="testimonials-education-transformation" type="TestimonialsSection">
          <Props>
            <Prop name="variant" kind="static">bubble-stack</Prop>
            <Prop name="eyebrow" kind="static">Education transformation</Prop>
            <Prop name="headline" kind="static">Districts modernize professional learning with StewardTrack</Prop>
