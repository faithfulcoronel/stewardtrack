<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/stats"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-stats">
    <Title>UI Block: Stats CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-stats" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">stats</Prop>
            <Prop name="badge" kind="static">Revenue intelligence</Prop>
            <Prop name="headline" kind="static">Quantify the lift from every experiment</Prop>
            <Prop name="description" kind="static">Connect activation events with revenue systems to understand which journeys compound growth.</Prop>
            <Prop name="highlight" kind="static">4.6x ROI</Prop>
            <Prop name="highlights" kind="binding" source="statsHighlights" path="items" />
            <Prop name="metrics" kind="binding" source="statsMetrics" path="items" />
            <Prop name="primaryCta" kind="action" actionId="activate-insights" />
            <Prop name="secondaryCta" kind="action" actionId="download-revenue-brief" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="statsHighlights" kind="static">
        <Json><![CDATA[
          {
            "items": [
              "Integrates with Snowflake, BigQuery, and Redshift.",
              "Stream insights into every go-to-market workflow."
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="statsMetrics" kind="static">
        <Json><![CDATA[
          {
            "items": [
              { "label": "Attribution coverage", "value": "93%" },
              { "label": "Average lift", "value": "18%" },
              { "label": "Decisions automated", "value": "27" }
            ]
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="activate-insights" kind="link">
        <Config>
          <Label>Activate insights</Label>
          <Url>/activate-insights</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="download-revenue-brief" kind="link">
        <Config>
          <Label>Download revenue brief</Label>
          <Url>/briefs/revenue-intelligence</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
