<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="feature/platform-ecosystem" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-feature-platform-ecosystem">
    <Title>UI Block: Platform ecosystem feature section</Title>
    <Regions>
      <Region id="features">
        <Component id="feature-platform-ecosystem" type="FeatureSection">
          <Props>
            <Prop name="variant" kind="static">logos</Prop>
            <Prop name="eyebrow" kind="static">Platform ecosystem</Prop>
            <Prop name="title" kind="static">Accelerate adoption with ready-made integrations</Prop>
            <Prop name="description" kind="static">Highlight technology partners, certified implementers, and solution accelerators in one modular showcase.</Prop>
            <Prop name="features" kind="binding" contract="ecosystemHighlights.items"/>
            <Prop name="logos" kind="binding" contract="ecosystemLogos.items"/>
            <Prop name="primaryCta" kind="action" actionId="browse-integration-directory"/>
            <Prop name="secondaryCta" kind="action" actionId="become-partner"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="ecosystemHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for feature-platform-ecosystem.features"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="title">
                  <Value>Certified partners</Value>
                </Field>
                <Field name="description">
                  <Value>Match with vetted experts for implementations, migrations, and change management.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Solution accelerators</Value>
                </Field>
                <Field name="description">
                  <Value>Deploy pre-built templates that combine automation, AI, and governance best practices.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Open APIs</Value>
                </Field>
                <Field name="description">
                  <Value>Extend your platform with SDKs, reference apps, and webhook tooling maintained by our team.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Marketplace analytics</Value>
                </Field>
                <Field name="description">
                  <Value>Track activation, retention, and expansion driven by partner solutions with granular reporting.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="ecosystemLogos" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for feature-platform-ecosystem.logos"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Northwind</Value>
              <Value>Acadia</Value>
              <Value>Lumina</Value>
              <Value>Ferro</Value>
              <Value>Beacon</Value>
              <Value>Stratus</Value>
              <Value>Nebula</Value>
              <Value>Harbor</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="browse-integration-directory" kind="link">
        <Config>
          <Label>Browse integration directory</Label>
          <Url>/partners/integration-directory</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="become-partner" kind="link">
        <Config>
          <Label>Become a partner</Label>
          <Url>/partners/apply</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
