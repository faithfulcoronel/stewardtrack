<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/pill"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-pill">
    <Title>UI Block: Pill CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-pill" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">pill</Prop>
            <Prop name="badge" kind="static">Enablement series</Prop>
            <Prop name="eyebrow" kind="static">Masterclass invitation</Prop>
            <Prop name="headline" kind="static">Reserve seats in the revenue enablement masterclass</Prop>
            <Prop name="description" kind="static">Bring your full revenue pod for a hands-on workshop covering systems, automation, and measurement.</Prop>
            <Prop name="highlights" kind="binding" source="pillHighlights" path="items" />
            <Prop name="logos" kind="binding" source="pillLogos" path="items" />
            <Prop name="primaryCta" kind="action" actionId="reserve-workshop" />
            <Prop name="secondaryCta" kind="action" actionId="share-with-team" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="pillHighlights" kind="static">
        <Json><![CDATA[
          {
            "items": [
              "Live system build",
              "Automation recipes",
              "Operator Q&A",
              "Scorecard templates",
              "Peer accountability",
              "Lifetime recording"
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="pillLogos" kind="static">
        <Json><![CDATA[
          {
            "items": ["Linear", "Segment", "Ramp", "Figma"]
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="reserve-workshop" kind="link">
        <Config>
          <Label>Reserve workshop seats</Label>
          <Url>/workshops/masterclass</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="share-with-team" kind="link">
        <Config>
          <Label>Share with your team</Label>
          <Url>/share/masterclass</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
