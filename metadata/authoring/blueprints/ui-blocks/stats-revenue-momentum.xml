<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="stats/revenue-momentum" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-stats-revenue-momentum">
    <Title>UI Block: Stats - Revenue momentum</Title>
    <Regions>
      <Region id="stats">
        <Component id="stats-revenue-momentum" type="StatsSection">
          <Props>
            <Prop name="variant" kind="static">velocity-panel</Prop>
            <Prop name="eyebrow" kind="static">Growth velocity</Prop>
            <Prop name="headline" kind="static">Momentum across every GTM motion</Prop>
            <Prop name="description" kind="static">Demonstrate disciplined revenue execution with the KPIs investors and revenue leaders follow every week.</Prop>
            <Prop name="metrics" kind="binding" contract="revenueMetrics.items"/>
            <Prop name="highlights" kind="binding" contract="revenueHighlights.items"/>
            <Prop name="primaryCta" kind="action" actionId="view-forecast"/>
            <Prop name="secondaryCta" kind="action" actionId="share-update"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="revenueMetrics" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for stats-revenue-momentum.metrics"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Annual recurring revenue</Value>
                </Field>
                <Field name="value">
                  <Value>$48M</Value>
                </Field>
                <Field name="change">
                  <Value>+18%</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>QoQ</Value>
                </Field>
                <Field name="description">
                  <Value>Driven by net-new platform subscriptions across enterprise and scale segments.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Pipeline coverage</Value>
                </Field>
                <Field name="value">
                  <Value>4.3x</Value>
                </Field>
                <Field name="change">
                  <Value>+0.8x</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>vs target</Value>
                </Field>
                <Field name="description">
                  <Value>Weighted pipeline coverage for the next two quarters.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Expansion ARR</Value>
                </Field>
                <Field name="value">
                  <Value>134%</Value>
                </Field>
                <Field name="change">
                  <Value>+12 pts</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>NRR</Value>
                </Field>
                <Field name="description">
                  <Value>Net revenue retention from existing customers.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Enterprise win rate</Value>
                </Field>
                <Field name="value">
                  <Value>46%</Value>
                </Field>
                <Field name="change">
                  <Value>+5 pts</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>QoQ</Value>
                </Field>
                <Field name="description">
                  <Value>Strategic deals over $100K closed with cross-functional pods.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="revenueHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for stats-revenue-momentum.highlights"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Forecast accuracy locked at 96%</Value>
              <Value>Average sales cycle shortened to 42 days</Value>
              <Value>Partner-sourced revenue up 31%</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="view-forecast" kind="link">
        <Config>
          <Label>Review forecast</Label>
          <Url>/revenue/forecast</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="share-update" kind="link">
        <Config>
          <Label>Share investor update</Label>
          <Url>/revenue/investor-brief</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
