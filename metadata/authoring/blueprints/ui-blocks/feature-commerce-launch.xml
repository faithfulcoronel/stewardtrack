<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="feature/commerce-launch" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-feature-commerce-launch">
    <Title>UI Block: Commerce launch feature section</Title>
    <Regions>
      <Region id="features">
        <Component id="feature-commerce-launch" type="FeatureSection">
          <Props>
            <Prop name="variant" kind="static">steps</Prop>
            <Prop name="eyebrow" kind="static">Digital commerce</Prop>
            <Prop name="title" kind="static">Launch new storefronts without the guesswork</Prop>
            <Prop name="description" kind="static">Give merchandising, engineering, and finance teams a shared playbook for orchestrating revenue-critical releases.</Prop>
            <Prop name="steps" kind="binding" contract="commerceSteps.items"/>
            <Prop name="primaryCta" kind="action" actionId="launch-commerce-kit"/>
            <Prop name="secondaryCta" kind="action" actionId="connect-payments"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="commerceSteps" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for feature-commerce-launch.steps"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="title">
                  <Value>Blueprint alignment</Value>
                </Field>
                <Field name="description">
                  <Value>Lock scope, personas, and KPIs with stakeholders across growth, product, and operations.</Value>
                </Field>
                <Field name="duration">
                  <Value>Week 1</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Catalog readiness</Value>
                </Field>
                <Field name="description">
                  <Value>Sync product data, pricing rules, and localized content with automated validations.</Value>
                </Field>
                <Field name="duration">
                  <Value>Week 2</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Experience QA</Value>
                </Field>
                <Field name="description">
                  <Value>Run device labs, payments testing, and accessibility reviews with status dashboards.</Value>
                </Field>
                <Field name="duration">
                  <Value>Week 3</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Growth orchestration</Value>
                </Field>
                <Field name="description">
                  <Value>Coordinate launch campaigns, promo codes, and lifecycle journeys from one calendar.</Value>
                </Field>
                <Field name="duration">
                  <Value>Launch week</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="launch-commerce-kit" kind="link">
        <Config>
          <Label>Launch the commerce kit</Label>
          <Url>/kits/commerce-launch</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="connect-payments" kind="link">
        <Config>
          <Label>Connect payments partners</Label>
          <Url>/integrations/payments</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
