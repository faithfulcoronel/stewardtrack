<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="header/image-cascade" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-header-image-cascade">
    <Title>UI Block: Image cascade header</Title>
    <Regions>
      <Region id="header">
        <Component id="header-image-cascade" type="HeaderSection">
          <Props>
            <Prop name="variant" kind="static">image-cascade</Prop>
            <Prop name="badge" kind="static">Platform update</Prop>
            <Prop name="headline" kind="static">Design once, scale everywhere</Prop>
            <Prop name="description" kind="static">Showcase a visual product story with a crisp layout that pairs narrative and imagery for teams comparing solutions.</Prop>
            <Prop name="highlights" kind="binding" contract="cascadeHighlights.value"/>
            <Prop name="image" kind="binding" contract="cascadeImage.value"/>
            <Prop name="primaryCta" kind="action" actionId="explore-platform"/>
            <Prop name="secondaryCta" kind="action" actionId="watch-demo"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="cascadeHighlights" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-image-cascade.highlights"/>
        </Contract>
        <Data>
          <Array>
            <Value>Adaptive layouts that speak your brand language</Value>
            <Value>Collaborative approvals directly inside every screen</Value>
            <Value>Global component tokens shipped with governance</Value>
          </Array>
        </Data>
      </DataSource>
      <DataSource id="cascadeImage" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-image-cascade.image"/>
        </Contract>
        <Data>
          <Field name="src">
            <Value>https://images.unsplash.com/photo-1523475472560-d2df97ec485c?auto=format&amp;fit=crop&amp;w=1440&amp;q=80</Value>
          </Field>
          <Field name="alt">
            <Value>Team reviewing a design system dashboard</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="explore-platform" kind="link">
        <Config>
          <Label>Explore platform</Label>
          <Url>/product</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="watch-demo" kind="link">
        <Config>
          <Label>Watch demo</Label>
          <Url>/demo/library</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
