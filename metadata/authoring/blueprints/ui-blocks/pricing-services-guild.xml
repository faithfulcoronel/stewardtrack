<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="pricing/services-guild" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-pricing-services-guild">
    <Title>UI Block: Services guild retainers</Title>
    <Regions>
      <Region id="pricing">
        <Component id="pricing-services-guild" type="PricingSection">
          <Props>
            <Prop name="variant" kind="static">partner-retainers</Prop>
            <Prop name="eyebrow" kind="static">Services guild</Prop>
            <Prop name="title" kind="static">Retainers that adapt to delivery rhythms and stakeholder needs</Prop>
            <Prop name="description" kind="static">From tactical execution to executive orchestration, these retainers keep your metadata, launches, and adoption aligned.</Prop>
            <Prop name="highlight" kind="static">Retainers renew every six months with a mid-cycle optimization sprint built in.</Prop>
            <Prop name="features" kind="binding" contract="servicesGuildHighlights.items"/>
            <Prop name="tiers" kind="binding" contract="servicesGuildTiers.tiers"/>
            <Prop name="faqs" kind="binding" contract="servicesGuildFaqs.items"/>
            <Prop name="footnote" kind="static">Travel and on-site sessions billed separately. Retainers include unlimited async reviews.</Prop>
            <Prop name="primaryCta" kind="action" actionId="schedule-guild-consult"/>
            <Prop name="secondaryCta" kind="action" actionId="view-sow-template"/>
            <Prop name="supportCta" kind="action" actionId="connect-partner-success"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="servicesGuildHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Highlight bullet list for the services guild offering"/>
        </Contract>
        <Data>
          <Array name="items">
            <Value>Dedicated producer orchestrating every workstream</Value>
            <Value>Async office hours for marketing, product, and operations</Value>
            <Value>Retainer reporting with KPIs, decisions, and backlog next actions</Value>
          </Array>
        </Data>
      </DataSource>
      <DataSource id="servicesGuildTiers" kind="static">
        <Contract>
          <Field name="tiers" path="items" description="Pricing tiers presented in the section"/>
        </Contract>
        <Data>
          <Array name="items">
            <Object>
              <Field name="name">Launch pod</Field>
              <Field name="price">$5,800</Field>
              <Field name="period">month</Field>
              <Field name="badge">3 workstreams</Field>
              <Field name="description">Ideal for growth-stage companies juggling launches, lifecycle, and content ops.</Field>
              <Field name="features">
                <Array>
                  <Value>Producer + strategist</Value>
                  <Value>Weekly planning standups</Value>
                  <Value>Asset QA + approvals</Value>
                  <Value>KPI reporting cadence</Value>
                </Array>
              </Field>
              <Field name="cta">
                <Object>
                  <Field name="config">
                    <Object>
                      <Field name="label">Start launch pod</Field>
                      <Field name="url">/checkout?plan=launch-pod</Field>
                      <Field name="variant">primary</Field>
                    </Object>
                  </Field>
                </Object>
              </Field>
            </Object>
            <Object>
              <Field name="name">Scale guild</Field>
              <Field name="price">$8,900</Field>
              <Field name="period">month</Field>
              <Field name="badge">5 workstreams</Field>
              <Field name="description">Designed for enterprises coordinating multi-product stories and partner enablement.</Field>
              <Field name="features">
                <Array>
                  <Value>Producer + two strategists</Value>
                  <Value>Enablement + advocacy tracks</Value>
                  <Value>Change management comms</Value>
                  <Value>Quarterly stakeholder summit</Value>
                </Array>
              </Field>
              <Field name="cta">
                <Object>
                  <Field name="config">
                    <Object>
                      <Field name="label">Engage scale guild</Field>
                      <Field name="url">/checkout?plan=scale-guild</Field>
                      <Field name="variant">primary</Field>
                    </Object>
                  </Field>
                </Object>
              </Field>
            </Object>
            <Object>
              <Field name="name">Executive studio</Field>
              <Field name="price">Custom</Field>
              <Field name="period">annual</Field>
              <Field name="badge">Leadership aligned</Field>
              <Field name="description">Partner directly with our executive producers to steward GTM, product, and customer narratives.</Field>
              <Field name="features">
                <Array>
                  <Value>Executive producer residency</Value>
                  <Value>Investor + board communications</Value>
                  <Value>Voice-of-customer workshops</Value>
                  <Value>ROI + adoption instrumentation</Value>
                </Array>
              </Field>
              <Field name="cta">
                <Object>
                  <Field name="config">
                    <Object>
                      <Field name="label">Design executive studio</Field>
                      <Field name="url">/contact/executive-studio</Field>
                      <Field name="variant">primary</Field>
                    </Object>
                  </Field>
                </Object>
              </Field>
            </Object>
          </Array>
        </Data>
      </DataSource>
      <DataSource id="servicesGuildFaqs" kind="static">
        <Contract>
          <Field name="items" path="items" description="FAQs surfaced in the accordion"/>
        </Contract>
        <Data>
          <Array name="items">
            <Object>
              <Field name="question">How fast can a pod onboard?</Field>
              <Field name="answer">Most pods begin shipping within 10 business days. We run a kickoff, align on KPIs, then enter the delivery cadence.</Field>
            </Object>
            <Object>
              <Field name="question">Can we pause a retainer?</Field>
              <Field name="answer">Yes. Pause up to 60 days each contract year with two-week notice. We&apos;ll keep backlog context warm.</Field>
            </Object>
            <Object>
              <Field name="question">Do retainers cover in-product metadata work?</Field>
              <Field name="answer">Absolutely. Guild producers collaborate with your engineering and product teams to orchestrate metadata changes.</Field>
            </Object>
          </Array>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="schedule-guild-consult" kind="link">
        <Config>
          <Label>Schedule a guild consult</Label>
          <Url>/demos/services-guild</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-sow-template" kind="link">
        <Config>
          <Label>View SOW template</Label>
          <Url>/resources/services-sow.docx</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
      <Action id="connect-partner-success" kind="link">
        <Config>
          <Label>Connect with partner success</Label>
          <Url>/contact/partner-success</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
