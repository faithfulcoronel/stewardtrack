            { "label": "Partner velocity", "description": "Co-selling workspaces and deal rooms" }
          ]
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="request-access" kind="link">
        <Config>
          <Label>Request access</Label>
          <Url>/request-access</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="compare-plans" kind="link">
        <Config>
          <Label>Compare plans</Label>
          <Url>/pricing</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
