            <Prop name="secondaryCta" kind="action" actionId="compare-plans" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="overviewTabs" kind="static">
        <Json><![CDATA[
          [
            { "label": "Lifecycle automation", "description": "Blueprint journeys, routing, and scoring" },
