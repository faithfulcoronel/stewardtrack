          <Props>
            <Prop name="variant" kind="static">tabbed-overview</Prop>
            <Prop name="eyebrow" kind="static">Product pillars</Prop>
            <Prop name="headline" kind="static">Choose your starting point</Prop>
            <Prop name="description" kind="static">A strategic header with tabbed entry points for different audiencesâ€”perfect for solution overviews or pricing guides.</Prop>
            <Prop name="tabs" kind="binding" source="overviewTabs" path="$" />
