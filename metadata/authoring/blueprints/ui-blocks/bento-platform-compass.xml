<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/platform-compass" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-platform-compass">
    <Title>UI Block: Platform compass bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-platform-compass" type="BentoGrid">
          <Props>
            <Prop name="variant" kind="static">platform-compass</Prop>
            <Prop name="eyebrow" kind="static">Platform connectivity</Prop>
            <Prop name="headline" kind="static">Compose secure integrations without engineering bottlenecks</Prop>
            <Prop name="description" kind="static">Blueprint connections, auth scopes, and lifecycle automation from a unified partner console.</Prop>
            <Prop name="cards" kind="binding" contract="platformCompassCards.items"/>
            <Prop name="logos" kind="binding" contract="platformCompassLogos.items"/>
            <Prop name="primaryCta" kind="action" actionId="browse-catalog"/>
            <Prop name="secondaryCta" kind="action" actionId="contact-platform"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="platformCompassCards" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for bento-platform-compass.cards"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="badge">
                  <Value>Launchpad</Value>
                </Field>
                <Field name="title">
                  <Value>Connector blueprints</Value>
                </Field>
                <Field name="description">
                  <Value>Provision pre-vetted integration scaffolds with data contracts, retries, and observability baked in.</Value>
                </Field>
                <Field name="tone">
                  <Value>brand</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>API</Value>
                </Field>
                <Field name="title">
                  <Value>Interactive explorer</Value>
                </Field>
                <Field name="description">
                  <Value>Test endpoints with environment switching, schema diffs, and consent-aware payloads.</Value>
                </Field>
                <Field name="tone">
                  <Value>frost</Value>
                </Field>
                <Field name="footnote">
                  <Value>Syncs with developer portal automatically.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="badge">
                  <Value>Automation</Value>
                </Field>
                <Field name="title">
                  <Value>Lifecycle orchestration</Value>
                </Field>
                <Field name="description">
                  <Value>Drive activation emails, webhook validation, and marketplace listings from one flow.</Value>
                </Field>
                <Field name="tone">
                  <Value>sand</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>Security</Value>
                </Field>
                <Field name="title">
                  <Value>Scope governance</Value>
                </Field>
                <Field name="description">
                  <Value>Define OAuth recipes, least-privilege roles, and secrets rotation policies.</Value>
                </Field>
                <Field name="tone">
                  <Value>cobalt</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>Monitoring</Value>
                </Field>
                <Field name="title">
                  <Value>Runtime health</Value>
                </Field>
                <Field name="description">
                  <Value>Receive latency, error, and saturation alerts mapped to partner SLAs.</Value>
                </Field>
                <Field name="tone">
                  <Value>surface</Value>
                </Field>
              </Object>
              <Object>
                <Field name="badge">
                  <Value>Support</Value>
                </Field>
                <Field name="title">
                  <Value>Partner desk</Value>
                </Field>
                <Field name="description">
                  <Value>Surface changelog alerts, co-marketing assets, and sandbox resets for your ecosystem.</Value>
                </Field>
                <Field name="tone">
                  <Value>light</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="platformCompassLogos" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for bento-platform-compass.logos"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Salesforce</Value>
              <Value>Workday</Value>
              <Value>ServiceNow</Value>
              <Value>NetSuite</Value>
              <Value>Slack</Value>
              <Value>Okta</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="browse-catalog" kind="link">
        <Config>
          <Label>Browse integration catalog</Label>
          <Url>/platform/catalog</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="contact-platform" kind="link">
        <Config>
          <Label>Talk with platform team</Label>
          <Url>/platform/contact</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
