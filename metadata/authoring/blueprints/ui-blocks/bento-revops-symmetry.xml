<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/revops-symmetry" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-revops-symmetry">
    <Title>UI Block: RevOps symmetry bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-revops-symmetry" type="BentoGrid">
          <Props>
            <Prop name="variant" kind="static">revops-symmetry</Prop>
            <Prop name="eyebrow" kind="static">Revenue operations</Prop>
            <Prop name="headline" kind="static">Create revenue symmetry across marketing, sales, and success</Prop>
            <Prop name="description" kind="static">Align pipeline health, playbooks, and enablement in one revenue cockpit built for cross-functional execution.</Prop>
            <Prop name="cards" kind="binding" contract="revopsSymmetryCards.items"/>
            <Prop name="metrics" kind="binding" contract="revopsSymmetryMetrics.items"/>
            <Prop name="primaryCta" kind="action" actionId="open-forecast"/>
            <Prop name="secondaryCta" kind="action" actionId="share-enablement-pack"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="revopsSymmetryCards" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for bento-revops-symmetry.cards"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="badge">
                  <Value>Pipeline</Value>
                </Field>
                <Field name="title">
                  <Value>Hygiene heatmap</Value>
                </Field>
                <Field name="description">
                  <Value>Spot stale deals, missing next steps, and coverage gaps by segment.</Value>
                </Field>
                <Field name="tone">
                  <Value>cobalt</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>Scoring</Value>
                </Field>
                <Field name="title">
                  <Value>Propensity engine</Value>
                </Field>
                <Field name="description">
                  <Value>Blend product usage, intent, and support tickets into account prioritization.</Value>
                </Field>
                <Field name="tone">
                  <Value>brand</Value>
                </Field>
                <Field name="footnote">
                  <Value>Feeds weekly standups automatically.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="badge">
                  <Value>Playbooks</Value>
                </Field>
                <Field name="title">
                  <Value>Deal room library</Value>
                </Field>
                <Field name="description">
                  <Value>Serve best-practice templates with role-specific tasks and assets.</Value>
                </Field>
                <Field name="tone">
                  <Value>surface</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>Forecast</Value>
                </Field>
                <Field name="stat">
                  <Value>96%</Value>
                </Field>
                <Field name="title">
                  <Value>Signal-aligned forecast</Value>
                </Field>
                <Field name="description">
                  <Value>Roll up AI-assisted predictions with manager overrides and scenario modeling.</Value>
                </Field>
                <Field name="tone">
                  <Value>forest</Value>
                </Field>
              </Object>
              <Object>
                <Field name="eyebrow">
                  <Value>Enablement</Value>
                </Field>
                <Field name="title">
                  <Value>Momentum pulses</Value>
                </Field>
                <Field name="description">
                  <Value>Weekly digest summarizing wins, risks, and competitive intel for every pod.</Value>
                </Field>
                <Field name="tone">
                  <Value>light</Value>
                </Field>
              </Object>
              <Object>
                <Field name="badge">
                  <Value>Success</Value>
                </Field>
                <Field name="title">
                  <Value>Expansion radar</Value>
                </Field>
                <Field name="description">
                  <Value>Track product-qualified accounts and renewal sentiment side-by-side.</Value>
                </Field>
                <Field name="tone">
                  <Value>dark</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="revopsSymmetryMetrics" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for bento-revops-symmetry.metrics"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Forecast accuracy</Value>
                </Field>
                <Field name="value">
                  <Value>±4.6%</Value>
                </Field>
                <Field name="change">
                  <Value>Improved from ±8.9%</Value>
                </Field>
                <Field name="sentiment">
                  <Value>positive</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Win rate</Value>
                </Field>
                <Field name="value">
                  <Value>32%</Value>
                </Field>
                <Field name="change">
                  <Value>+6 pts after playbook rollout</Value>
                </Field>
                <Field name="sentiment">
                  <Value>positive</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Sales cycle</Value>
                </Field>
                <Field name="value">
                  <Value>41 days</Value>
                </Field>
                <Field name="change">
                  <Value>↓ 9 days vs Q1</Value>
                </Field>
                <Field name="sentiment">
                  <Value>positive</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Expansion pipeline</Value>
                </Field>
                <Field name="value">
                  <Value>$8.4M</Value>
                </Field>
                <Field name="change">
                  <Value>Qualified across 27 accounts</Value>
                </Field>
                <Field name="sentiment">
                  <Value>neutral</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="open-forecast" kind="link">
        <Config>
          <Label>Open revenue forecast</Label>
          <Url>/revops/forecast</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="share-enablement-pack" kind="link">
        <Config>
          <Label>Share enablement pack</Label>
          <Url>/revops/enablement-pack</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
