<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/split"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-split">
    <Title>UI Block: Split CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-split" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="eyebrow" kind="static">Release readiness</Prop>
            <Prop name="headline" kind="static">Guide product teams from idea to shipped update</Prop>
            <Prop name="description" kind="static">Automate release reviews, assign owners, and leave stakeholders confident that every scenario is covered.</Prop>
            <Prop name="highlights" kind="binding" source="splitHighlights" path="items" />
            <Prop name="media" kind="binding" source="splitMedia" path="$" />
            <Prop name="primaryCta" kind="action" actionId="launch-playbook" />
            <Prop name="secondaryCta" kind="action" actionId="talk-with-advisor" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="splitHighlights" kind="static">
        <Json><![CDATA[
          {
            "items": [
              "Trigger checklists when Jira epics move to ready for QA.",
              "Schedule enablement briefings with localized collateral.",
              "Track launch health with color-coded insights."
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="splitMedia" kind="static">
        <Json><![CDATA[
          {
            "src": "https://images.unsplash.com/photo-1523475472560-d2df97ec485c?auto=format&fit=crop&w=1600&q=80",
            "alt": "Product managers collaborating over a roadmap"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="launch-playbook" kind="link">
        <Config>
          <Label>Launch the playbook</Label>
          <Url>/playbooks/launch</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="talk-with-advisor" kind="link">
        <Config>
          <Label>Talk with an advisor</Label>
          <Url>/consulting</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
