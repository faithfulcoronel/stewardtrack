<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/sustainability-lab" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-sustainability-lab">
    <Title>UI Block: Sustainability lab bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-sustainability-lab" type="BentoGrid">
