            <Prop name="eyebrow" kind="static">Sustainability</Prop>
            <Prop name="headline" kind="static">Operationalize sustainability pledges with measurable progress</Prop>
            <Prop name="description" kind="static">Bring emissions, supplier data, and initiatives into one transparency lab everyone can trust.</Prop>
            <Prop name="cards" kind="binding" contract="sustainabilityLabCards.items"/>
            <Prop name="metrics" kind="binding" contract="sustainabilityLabMetrics.items"/>
            <Prop name="primaryCta" kind="action" actionId="view-impact-hub"/>
            <Prop name="secondaryCta" kind="action" actionId="download-reporting-kit"/>
          </Props>
        </Component>
      </Region>
    </Regions>
