<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/download-guide" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-download-guide">
    <Title>UI Block: Download guide CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-download-guide" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">resource</Prop>
            <Prop name="eyebrow" kind="static">Implementation guide</Prop>
            <Prop name="headline" kind="static">Download the schema operations playbook</Prop>
            <Prop name="description" kind="static">A 34-page walkthrough covering governance models, release rituals, and KPI measurement frameworks for metadata programs.</Prop>
            <Prop name="resource" kind="binding" contract="playbookResource.value"/>
            <Prop name="steps" kind="binding" contract="playbookSteps.items"/>
            <Prop name="primaryCta" kind="action" actionId="download-guide"/>
            <Prop name="secondaryCta" kind="action" actionId="share-team"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="playbookResource" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for cta-download-guide.resource"/>
        </Contract>
        <Data>
          <Field name="label">
            <Value>StewardTrack schema operations playbook.pdf</Value>
          </Field>
          <Field name="meta">
            <Value>34 pages â€¢ Includes editable templates</Value>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="playbookSteps" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for cta-download-guide.steps"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="title">
                  <Value>Benchmark readiness</Value>
                </Field>
                <Field name="description">
                  <Value>Assess current tooling, governance, and publisher roles.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Design your schema</Value>
                </Field>
                <Field name="description">
                  <Value>Model hero, CTA, and feature primitives with extensibility.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Roll out in waves</Value>
                </Field>
                <Field name="description">
                  <Value>Plan enablement, QA rituals, and feedback cadences.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="download-guide" kind="link">
        <Config>
          <Label>Download the guide</Label>
          <Url>/resources/schema-operations-playbook.pdf</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="share-team" kind="link">
        <Config>
          <Label>Share with my team</Label>
          <Url>/share/schema-playbook</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
