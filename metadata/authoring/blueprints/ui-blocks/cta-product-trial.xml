<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/product-trial" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-product-trial">
    <Title>UI Block: Product trial CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-product-trial" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="badge" kind="static">14-day access</Prop>
            <Prop name="eyebrow" kind="static">Free trial</Prop>
            <Prop name="headline" kind="static">Launch StewardTrack experiments in days</Prop>
            <Prop name="description" kind="static">Provision a workspace, connect sources, and validate new messaging without waiting on an engineering deploy.</Prop>
            <Prop name="checklist" kind="binding" contract="trialChecklist.items"/>
            <Prop name="image" kind="binding" contract="trialMedia.value"/>
            <Prop name="primaryCta" kind="action" actionId="start-trial"/>
            <Prop name="secondaryCta" kind="action" actionId="view-guide"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="trialChecklist" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for cta-product-trial.checklist"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Set up a workspace in under 15 minutes with guided defaults.</Value>
              <Value>Sync product analytics, CRM context, and launch plans automatically.</Value>
              <Value>Invite collaborators and assign review tasks across teams.</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="trialMedia" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for cta-product-trial.image"/>
        </Contract>
        <Data>
          <Field name="src">
            <Value>https://images.unsplash.com/photo-1523475472560-d2df97ec485c?auto=format&amp;amp;fit=crop&amp;amp;w=1200&amp;amp;q=80</Value>
          </Field>
          <Field name="alt">
            <Value>Product team collaborating during a trial onboarding</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="start-trial" kind="link">
        <Config>
          <Label>Start free trial</Label>
          <Url>/signup/trial</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-guide" kind="link">
        <Config>
          <Label>See onboarding guide</Label>
          <Url>/docs/onboarding</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
