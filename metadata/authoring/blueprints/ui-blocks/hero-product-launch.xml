<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="hero/product-launch"
  schemaVersion="1.0.0"
  contentVersion="2.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-hero-product-launch">
    <Title>UI Block: Product launch hero</Title>
    <Regions>
      <Region id="hero">
        <Component id="hero-product-launch" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="eyebrow" kind="static">Launch week</Prop>
            <Prop name="headline" kind="static">Adaptive workflows that sync every launch team</Prop>
            <Prop name="description" kind="static">Showcase the release, link to the roadmap, and let marketing, product, and success stay aligned inside one metadata-powered hero.</Prop>
            <Prop name="highlights" kind="binding" source="launchHighlights" path="items" />
            <Prop name="primaryCta" kind="action" actionId="start-trial" />
            <Prop name="secondaryCta" kind="action" actionId="view-roadmap" />
            <Prop name="image" kind="binding" source="launchMedia" path="$" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="launchHighlights" kind="static">
        <Json><![CDATA[
          {
            "items": [
              "Blueprint overlays gate features by tenant and role.",
              "Run launch checklists with metadata-driven status badges.",
              "Sync roadmap cards automatically from product spec sources."
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="launchMedia" kind="static">
        <Json><![CDATA[
          {
            "src": "https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&amp;fit=crop&amp;w=1600&amp;q=80",
            "alt": "Team planning a launch release"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="start-trial" kind="link">
        <Config>
          <Label>Start free trial</Label>
          <Url>/signup/trial</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-roadmap" kind="link">
        <Config>
          <Label>View roadmap</Label>
          <Url>/roadmap</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
