<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/enterprise-audit" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-enterprise-audit">
    <Title>UI Block: Enterprise audit CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-enterprise-audit" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">metrics</Prop>
            <Prop name="eyebrow" kind="static">Enterprise workflow audit</Prop>
            <Prop name="headline" kind="static">Uncover the roadmap impact of your content operations</Prop>
            <Prop name="description" kind="static">Partner with our solutions team for a guided audit of your publishing models, tooling handoffs, and release cadences.</Prop>
            <Prop name="highlight" kind="static">Limited to 10 teams per quarter</Prop>
            <Prop name="stats" kind="binding" contract="auditStats.items"/>
            <Prop name="primaryCta" kind="action" actionId="book-audit"/>
            <Prop name="secondaryCta" kind="action" actionId="download-brief"/>
            <Prop name="tertiaryCta" kind="action" actionId="share-invite"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="auditStats" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for cta-enterprise-audit.stats"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Systems reviewed</Value>
                </Field>
                <Field name="value">
                  <Value>12</Value>
                </Field>
                <Field name="caption">
                  <Value>Average across product, marketing, and success.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Time-to-value</Value>
                </Field>
                <Field name="value">
                  <Value>5 weeks</Value>
                </Field>
                <Field name="caption">
                  <Value>From kickoff to operating model recommendation.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Stakeholder alignment</Value>
                </Field>
                <Field name="value">
                  <Value>93%</Value>
                </Field>
                <Field name="caption">
                  <Value>Post-audit agreement on governance changes.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="book-audit" kind="link">
        <Config>
          <Label>Book an audit</Label>
          <Url>/enterprise/audit</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="download-brief" kind="link">
        <Config>
          <Label>Download scope brief</Label>
          <Url>/resources/StewardTrack-enterprise-audit.pdf</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="share-invite" kind="link">
        <Config>
          <Label>Share with stakeholders</Label>
          <Url>/enterprise/audit/share</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
