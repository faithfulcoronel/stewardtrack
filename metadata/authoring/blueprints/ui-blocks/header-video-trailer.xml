<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="header/video-trailer"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-header-video-trailer">
    <Title>UI Block: Video trailer header</Title>
    <Regions>
      <Region id="header">
        <Component id="header-video-trailer" type="HeaderSection">
          <Props>
            <Prop name="variant" kind="static">video-trailer</Prop>
            <Prop name="badge" kind="static">Event premiere</Prop>
            <Prop name="headline" kind="static">Blueprint Sessions: The Trailer</Prop>
            <Prop name="description" kind="static">Anchor a launch or event with a cinematic trailer preview paired with confident calls to engage.</Prop>
            <Prop name="video" kind="binding" source="trailerVideo" path="$" />
            <Prop name="primaryCta" kind="action" actionId="reserve-seat" />
            <Prop name="secondaryCta" kind="action" actionId="view-agenda" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="trailerVideo" kind="static">
        <Json><![CDATA[
          {
            "label": "Play trailer",
            "url": "https://example.com/trailer",
            "thumbnail": "https://images.unsplash.com/photo-1525182008055-f88b95ff7980?auto=format&fit=crop&w=1400&q=80"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="reserve-seat" kind="link">
        <Config>
          <Label>Reserve your seat</Label>
          <Url>/events/blueprint-sessions/register</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-agenda" kind="link">
        <Config>
          <Label>View agenda</Label>
          <Url>/events/blueprint-sessions/agenda</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
