<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/newsletter"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-newsletter">
    <Title>UI Block: Newsletter CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-newsletter" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">newsletter</Prop>
            <Prop name="eyebrow" kind="static">Content fuel</Prop>
            <Prop name="headline" kind="static">Subscribe to the GTM Systems newsletter</Prop>
            <Prop name="description" kind="static">Every Tuesday we unpack workflows that help marketing, product, and revenue teams stay in sync.</Prop>
            <Prop name="form" kind="binding" source="newsletterForm" path="$" />
            <Prop name="highlights" kind="binding" source="newsletterHighlights" path="items" />
            <Prop name="primaryCta" kind="action" actionId="view-past-issues" />
            <Prop name="secondaryCta" kind="action" actionId="download-media-kit" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="newsletterHighlights" kind="static">
        <Json><![CDATA[
          {
            "items": [
              "3 actionable workflows per issue.",
              "Interviews with operators shipping weekly.",
              "Templates you can duplicate in Flowspace."
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="newsletterForm" kind="static">
        <Json><![CDATA[
          {
            "placeholder": "you@company.com",
            "buttonLabel": "Join the list",
            "disclaimer": "No spamâ€”just battle-tested tactics.",
            "url": "/api/subscribe"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="view-past-issues" kind="link">
        <Config>
          <Label>Browse past issues</Label>
          <Url>/newsletter/archive</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="download-media-kit" kind="link">
        <Config>
          <Label>Download media kit</Label>
          <Url>/newsletter/media-kit</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
