            <Prop name="variant" kind="static">community</Prop>
            <Prop name="badge" kind="static">Community wire</Prop>
            <Prop name="headline" kind="static">Stay close to the builders</Prop>
            <Prop name="description" kind="static">A weekly recap from 5,000+ metadata practitioners sharing what worked, what broke, and how they fixed it.</Prop>
            <Prop name="highlights" kind="binding" source="communityHighlights" path="items" />
            <Prop name="gallery" kind="binding" source="communityGallery" path="items" />
            <Prop name="testimonials" kind="binding" source="communityTestimonial" path="items" />
            <Prop name="form" kind="binding" source="communityForm" path="$" />
            <Prop name="highlight" kind="static">Trade playbooks with peers shipping metadata in production.</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
