<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/community-invite" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-community-invite">
    <Title>UI Block: Community invite CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-community-invite" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">minimal</Prop>
            <Prop name="badge" kind="static">Community</Prop>
            <Prop name="headline" kind="static">Join the metadata leadership circle</Prop>
            <Prop name="description" kind="static">A private space for product, lifecycle, and revenue leaders shipping metadata-driven experiences.</Prop>
            <Prop name="primaryCta" kind="action" actionId="request-invite"/>
            <Prop name="secondaryCta" kind="action" actionId="view-calendar"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <Actions>
      <Action id="request-invite" kind="link">
        <Config>
          <Label>Request an invite</Label>
          <Url>/community/request</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-calendar" kind="link">
        <Config>
          <Label>See community calendar</Label>
          <Url>/community/calendar</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
