<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/overlay"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-overlay">
    <Title>UI Block: Overlay CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-overlay" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">overlay</Prop>
            <Prop name="eyebrow" kind="static">Community spotlight</Prop>
            <Prop name="headline" kind="static">Host memorable community summits with less overhead</Prop>
            <Prop name="description" kind="static">Automate speaker onboarding, sponsor approvals, and attendee nurture sequences from one command center.</Prop>
            <Prop name="media" kind="binding" source="overlayMedia" path="$" />
            <Prop name="primaryCta" kind="action" actionId="book-event-immersion" />
            <Prop name="secondaryCta" kind="action" actionId="see-planning-playbook" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="overlayMedia" kind="static">
        <Json><![CDATA[
          {
            "src": "https://images.unsplash.com/photo-1523580846011-d3a5bc25702b?auto=format&fit=crop&w=1600&q=80",
            "alt": "Conference audience listening to a speaker"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="book-event-immersion" kind="link">
        <Config>
          <Label>Book event immersion</Label>
          <Url>/events/immersion</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="see-planning-playbook" kind="link">
        <Config>
          <Label>See planning playbook</Label>
          <Url>/events/playbook</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
