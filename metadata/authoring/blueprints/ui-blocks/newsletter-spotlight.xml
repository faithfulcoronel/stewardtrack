<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="newsletter/spotlight"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-newsletter-spotlight">
    <Title>UI Block: Newsletter testimonial spotlight</Title>
    <Regions>
      <Region id="newsletter">
        <Component id="newsletter-spotlight" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">spotlight</Prop>
            <Prop name="badge" kind="static">Executive brief</Prop>
            <Prop name="headline" kind="static">One email leaders actually read</Prop>
            <Prop name="description" kind="static">Summaries tailored for VPs and founders who want proof that metadata-led teams ship faster and stay aligned.</Prop>
            <Prop name="testimonials" kind="binding" source="spotlightTestimonial" path="items" />
            <Prop name="logos" kind="binding" source="spotlightLogos" path="items" />
            <Prop name="form" kind="binding" source="spotlightForm" path="$" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="spotlightTestimonial" kind="static">
        <Json><![CDATA[
          {
            "items": [
              {
                "quote": "The executive brief gives me a board-ready read on how metadata is powering our customer experience.",
                "author": "Morgan Hayes",
                "role": "Chief Product Officer, Verse"
              }
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="spotlightLogos" kind="static">
        <Json><![CDATA[
          {
            "items": ["Verse", "Paragon", "Haystack", "Vanta"]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="spotlightForm" kind="static">
        <Json><![CDATA[
          {
            "placeholder": "leader@company.com",
            "buttonLabel": "Send the brief",
            "disclaimer": "Arrives Sunday evening with metrics and talking points.",
            "url": "/newsletter/executive-brief/subscribe"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
  </Page>
</PageDefinition>
