<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="cta/live-workshop" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-cta-live-workshop">
    <Title>UI Block: Live workshop CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-live-workshop" type="CTASection">
          <Props>
            <Prop name="variant" kind="static">event</Prop>
            <Prop name="badge" kind="static">Live workshop</Prop>
            <Prop name="headline" kind="static">Build a metadata playbook with our team</Prop>
            <Prop name="description" kind="static">Join an interactive session to blueprint a launch workflow tailored to your product, marketing, and lifecycle squads.</Prop>
            <Prop name="event" kind="binding" contract="workshopDetails.value"/>
            <Prop name="primaryCta" kind="action" actionId="reserve-seat"/>
            <Prop name="secondaryCta" kind="action" actionId="view-agenda"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="workshopDetails" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for cta-live-workshop.event"/>
        </Contract>
        <Data>
          <Field name="date">
            <Value>April 18, 2025</Value>
          </Field>
          <Field name="time">
            <Value>10:00 AM</Value>
          </Field>
          <Field name="timezone">
            <Value>PT</Value>
          </Field>
          <Field name="location">
            <Value>Virtual via Zoom</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="reserve-seat" kind="link">
        <Config>
          <Label>Reserve your seat</Label>
          <Url>/events/metadata-workshop</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-agenda" kind="link">
        <Config>
          <Label>View agenda</Label>
          <Url>/events/metadata-workshop/agenda</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
