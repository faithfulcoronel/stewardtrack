<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/executive-lens" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-executive-lens">
    <Title>UI Block: Executive lens bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-executive-lens" type="BentoGrid">
          <Props>
            <Prop name="variant" kind="static">executive-lens</Prop>
            <Prop name="eyebrow" kind="static">Executive briefing</Prop>
            <Prop name="headline" kind="static">See the enterprise at a glance and act with conviction</Prop>
            <Prop name="description" kind="static">Combine financial health, customer momentum, and strategic bets in one executive-ready grid.</Prop>
            <Prop name="cards" kind="binding" contract="executiveLensCards.items"/>
            <Prop name="metrics" kind="binding" contract="executiveLensMetrics.items"/>
            <Prop name="primaryCta" kind="action" actionId="open-board-brief"/>
            <Prop name="secondaryCta" kind="action" actionId="share-investor-update"/>
          </Props>
        </Component>
      </Region>
    </Regions>
