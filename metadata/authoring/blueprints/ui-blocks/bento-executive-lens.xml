    <Actions>
      <Action id="open-board-brief" kind="link">
        <Config>
          <Label>Open board brief</Label>
          <Url>/executive/board-brief</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="share-investor-update" kind="link">
