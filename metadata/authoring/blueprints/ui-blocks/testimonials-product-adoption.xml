<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="testimonials/product-adoption" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-testimonials-product-adoption">
    <Title>UI Block: Testimonials - Product adoption</Title>
    <Regions>
      <Region id="testimonials">
        <Component id="testimonials-product-adoption" type="TestimonialsSection">
          <Props>
            <Prop name="variant" kind="static">split-story</Prop>
            <Prop name="eyebrow" kind="static">Adoption playbook</Prop>
            <Prop name="headline" kind="static">Adoption accelerators customers feel in weeks</Prop>
            <Prop name="description" kind="static">Blend a hero story with supporting proof points. Ideal for feature launches that demand narrative plus data.</Prop>
            <Prop name="testimonials" kind="binding" contract="adoptionTestimonials.items"/>
            <Prop name="highlights" kind="binding" contract="adoptionHighlights.items"/>
            <Prop name="primaryCta" kind="action" actionId="watch-demo"/>
            <Prop name="secondaryCta" kind="action" actionId="download-guide"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
