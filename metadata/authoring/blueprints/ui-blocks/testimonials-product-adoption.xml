      <DataSource id="adoptionHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for testimonials-product-adoption.highlights"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Dynamic video chapters based on role</Value>
              <Value>Usage telemetry piping directly into productboard</Value>
              <Value>Confidence score surfaced before rollout reviews</Value>
