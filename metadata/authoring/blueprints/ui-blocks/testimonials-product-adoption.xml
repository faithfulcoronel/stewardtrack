          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="watch-demo" kind="link">
        <Config>
          <Label>Watch guided demo</Label>
          <Url>/demo/adoption</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="download-guide" kind="link">
        <Config>
          <Label>Download launch guide</Label>
          <Url>/resources/launch-guide</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
