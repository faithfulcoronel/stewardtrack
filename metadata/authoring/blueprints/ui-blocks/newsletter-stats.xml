<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="newsletter/stats"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-newsletter-stats">
    <Title>UI Block: Newsletter stats glow</Title>
    <Regions>
      <Region id="newsletter">
        <Component id="newsletter-stats" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">stats</Prop>
            <Prop name="eyebrow" kind="static">Flowspace Signals</Prop>
            <Prop name="headline" kind="static">Understand the health of your metadata pipeline</Prop>
            <Prop name="description" kind="static">A mid-week pulse on ingestion uptime, experiment velocity, and the automations teams are adopting right now.</Prop>
            <Prop name="stats" kind="binding" source="statsMetrics" path="items" />
            <Prop name="form" kind="binding" source="statsForm" path="$" />
            <Prop name="primaryCta" kind="action" actionId="view-dashboard" />
            <Prop name="secondaryCta" kind="action" actionId="download-sample" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="statsMetrics" kind="static">
        <Json><![CDATA[
          {
            "items": [
              {
                "label": "Average uptime",
                "value": "99.4%",
                "caption": "Across 12k ingestion jobs tracked last month."
              },
              {
                "label": "Experiment lift",
                "value": "+18%",
                "caption": "Median activation improvement from metadata-led tests."
              },
              {
                "label": "Lifecycle triggers",
                "value": "43",
                "caption": "Workflows subscribers automated in the last 30 days."
              }
            ]
          }
        ]]></Json>
      </DataSource>
      <DataSource id="statsForm" kind="static">
        <Json><![CDATA[
          {
            "placeholder": "data.ops@company.com",
            "buttonLabel": "Monitor my pipeline",
            "disclaimer": "Sent every Wednesday with fresh telemetry.",
            "url": "/newsletter/flowspace-signals/subscribe"
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="view-dashboard" kind="link">
        <Config>
          <Label>Open live dashboard</Label>
          <Url>/analytics/pipeline-health</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="download-sample" kind="link">
        <Config>
          <Label>Download sample report</Label>
          <Url>/newsletter/flowspace-signals/sample.pdf</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
