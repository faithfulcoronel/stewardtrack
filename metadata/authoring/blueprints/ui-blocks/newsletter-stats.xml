<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="newsletter/stats" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-newsletter-stats">
    <Title>UI Block: Newsletter stats glow</Title>
    <Regions>
      <Region id="newsletter">
        <Component id="newsletter-stats" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">stats</Prop>
            <Prop name="eyebrow" kind="static">StewardTrack Signals</Prop>
            <Prop name="headline" kind="static">Understand the health of your metadata pipeline</Prop>
            <Prop name="description" kind="static">A mid-week pulse on ingestion uptime, experiment velocity, and the automations teams are adopting right now.</Prop>
            <Prop name="stats" kind="binding" contract="statsMetrics.items"/>
            <Prop name="form" kind="binding" contract="statsForm.value"/>
            <Prop name="primaryCta" kind="action" actionId="view-dashboard"/>
            <Prop name="secondaryCta" kind="action" actionId="download-sample"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="statsMetrics" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for newsletter-stats.stats"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="label">
                  <Value>Average uptime</Value>
                </Field>
                <Field name="value">
                  <Value>99.4%</Value>
                </Field>
                <Field name="caption">
                  <Value>Across 12k ingestion jobs tracked last month.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Experiment lift</Value>
                </Field>
                <Field name="value">
                  <Value>+18%</Value>
                </Field>
                <Field name="caption">
                  <Value>Median activation improvement from metadata-led tests.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="label">
                  <Value>Lifecycle triggers</Value>
                </Field>
                <Field name="value">
                  <Value>43</Value>
                </Field>
                <Field name="caption">
                  <Value>Workflows subscribers automated in the last 30 days.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="statsForm" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for newsletter-stats.form"/>
        </Contract>
        <Data>
          <Field name="placeholder">
            <Value>data.ops@company.com</Value>
          </Field>
          <Field name="buttonLabel">
            <Value>Monitor my pipeline</Value>
          </Field>
          <Field name="disclaimer">
            <Value>Sent every Wednesday with fresh telemetry.</Value>
          </Field>
          <Field name="url">
            <Value>/newsletter/StewardTrack-signals/subscribe</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="view-dashboard" kind="link">
        <Config>
          <Label>Open live dashboard</Label>
          <Url>/analytics/pipeline-health</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="download-sample" kind="link">
        <Config>
          <Label>Download sample report</Label>
          <Url>/newsletter/StewardTrack-signals/sample.pdf</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
