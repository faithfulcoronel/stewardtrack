<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/commerce-meridian" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-commerce-meridian">
    <Title>UI Block: Commerce meridian bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-commerce-meridian" type="BentoGrid">
          <Props>
            <Prop name="variant" kind="static">commerce-meridian</Prop>
            <Prop name="eyebrow" kind="static">Commerce acceleration</Prop>
            <Prop name="headline" kind="static">Launch high-converting storefronts with operational clarity</Prop>
            <Prop name="description" kind="static">Coordinate merchandising, fulfillment, and lifecycle messaging with a bento built for omnichannel teams.</Prop>
            <Prop name="cards" kind="binding" contract="commerceMeridianCards.items"/>
            <Prop name="metrics" kind="binding" contract="commerceMeridianMetrics.items"/>
            <Prop name="primaryCta" kind="action" actionId="view-commerce-playbook"/>
            <Prop name="secondaryCta" kind="action" actionId="talk-retail-ops"/>
          </Props>
        </Component>
      </Region>
    </Regions>
