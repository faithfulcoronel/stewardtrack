                <Field name="change">
                  <Value>+8 pts</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>QA index</Value>
                </Field>
                <Field name="description">
                  <Value>Automated regression suites and manual validation coverage.</Value>
                </Field>
              </Object>
              <Object>
