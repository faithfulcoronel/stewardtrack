              </Object>
              <Object>
                <Field name="label">
                  <Value>Beta cohort engaged</Value>
                </Field>
                <Field name="value">
                  <Value>36 teams</Value>
                </Field>
                <Field name="change">
                  <Value>+12</Value>
                </Field>
                <Field name="changeLabel">
                  <Value>vs last launch</Value>
                </Field>
                <Field name="description">
                  <Value>Design partners validating production build in live environments.</Value>
                </Field>
              </Object>
