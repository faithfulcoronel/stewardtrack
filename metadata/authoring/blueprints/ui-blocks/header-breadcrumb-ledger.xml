<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="header/breadcrumb-ledger" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-header-breadcrumb-ledger">
    <Title>UI Block: Breadcrumb ledger header</Title>
    <Regions>
      <Region id="header">
        <Component id="header-breadcrumb-ledger" type="HeaderSection">
          <Props>
            <Prop name="variant" kind="static">breadcrumb-ledger</Prop>
            <Prop name="headline" kind="static">Quarterly narrative hub</Prop>
            <Prop name="description" kind="static">Help teams orient quickly with a breadcrumb trail and snapshot ledger of key data points anchoring the story.</Prop>
            <Prop name="breadcrumbs" kind="binding" contract="ledgerBreadcrumbs.value"/>
            <Prop name="meta" kind="binding" contract="ledgerMeta.value"/>
            <Prop name="primaryCta" kind="action" actionId="download-brief"/>
            <Prop name="secondaryCta" kind="action" actionId="view-all"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="ledgerBreadcrumbs" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-breadcrumb-ledger.breadcrumbs"/>
        </Contract>
        <Data>
          <Array>
            <Object>
              <Field name="label">
                <Value>Docs</Value>
              </Field>
              <Field name="href">
                <Value>/docs</Value>
              </Field>
            </Object>
            <Object>
              <Field name="label">
                <Value>Narratives</Value>
              </Field>
              <Field name="href">
                <Value>/docs/narratives</Value>
              </Field>
            </Object>
            <Object>
              <Field name="label">
                <Value>Q2 customer story</Value>
              </Field>
            </Object>
          </Array>
        </Data>
      </DataSource>
      <DataSource id="ledgerMeta" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for header-breadcrumb-ledger.meta"/>
        </Contract>
        <Data>
          <Array>
            <Object>
              <Field name="label">
                <Value>Audience</Value>
              </Field>
              <Field name="value">
                <Value>Revenue &amp; lifecycle leaders</Value>
              </Field>
            </Object>
            <Object>
              <Field name="label">
                <Value>Publish date</Value>
              </Field>
              <Field name="value">
                <Value>May 6, 2025</Value>
              </Field>
            </Object>
            <Object>
              <Field name="label">
                <Value>Status</Value>
              </Field>
              <Field name="value">
                <Value>In review</Value>
              </Field>
            </Object>
            <Object>
              <Field name="label">
                <Value>Owner</Value>
              </Field>
              <Field name="value">
                <Value>Narrative studio</Value>
              </Field>
            </Object>
          </Array>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="download-brief" kind="link">
        <Config>
          <Label>Download brief</Label>
          <Url>/docs/narratives/q2-customer-story.pdf</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="view-all" kind="link">
        <Config>
          <Label>View all narratives</Label>
          <Url>/docs/narratives</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
