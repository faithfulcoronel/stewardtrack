<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="ui-blocks"
  route="cta/minimal"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  locale="en-US"
>
  <Page id="ui-blocks-cta-minimal">
    <Title>UI Block: Minimal CTA</Title>
    <Regions>
      <Region id="cta">
        <Component id="cta-minimal" type="CtaSection">
          <Props>
            <Prop name="variant" kind="static">minimal</Prop>
            <Prop name="eyebrow" kind="static">Audience personalization</Prop>
            <Prop name="headline" kind="static">Deliver tailored onboarding journeys in hours</Prop>
            <Prop name="description" kind="static">Spin up audience-specific CTA modules without engineering releases or design handoffs.</Prop>
            <Prop name="links" kind="binding" source="minimalLinks" path="items" />
            <Prop name="primaryCta" kind="action" actionId="start-free-workspace" />
            <Prop name="secondaryCta" kind="action" actionId="schedule-kickoff" />
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="minimalLinks" kind="static">
        <Json><![CDATA[
          {
            "items": [
              {
                "label": "View personalization examples",
                "href": "/library/personalization",
                "description": "Explore ready-to-ship journeys for every audience segment."
              },
              {
                "label": "Download onboarding brief",
                "href": "/assets/onboarding-brief.pdf",
                "description": "Align your team on messaging, milestones, and success metrics."
              }
            ]
          }
        ]]></Json>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="start-free-workspace" kind="link">
        <Config>
          <Label>Start free workspace</Label>
          <Url>/signup</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="schedule-kickoff" kind="link">
        <Config>
          <Label>Schedule kickoff</Label>
          <Url>/get-started</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
