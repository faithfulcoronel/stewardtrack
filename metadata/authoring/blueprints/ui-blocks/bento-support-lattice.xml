<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="bento/support-lattice" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-bento-support-lattice">
    <Title>UI Block: Support lattice bento grid</Title>
    <Regions>
      <Region id="grid">
        <Component id="bento-support-lattice" type="BentoGrid">
          <Props>
            <Prop name="variant" kind="static">support-lattice</Prop>
            <Prop name="eyebrow" kind="static">Customer support</Prop>
            <Prop name="headline" kind="static">Resolve issues faster with context-rich assistance</Prop>
            <Prop name="description" kind="static">Blend intelligence, automation, and human empathy into a support lattice tuned for every channel.</Prop>
            <Prop name="cards" kind="binding" contract="supportLatticeCards.items"/>
            <Prop name="metrics" kind="binding" contract="supportLatticeMetrics.items"/>
            <Prop name="primaryCta" kind="action" actionId="launch-support-center"/>
            <Prop name="secondaryCta" kind="action" actionId="view-playbooks"/>
          </Props>
        </Component>
      </Region>
    </Regions>
