<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="hero/newsletter" schemaVersion="1.0.0" contentVersion="2.0.0" locale="en-US">
  <Page id="ui-blocks-hero-newsletter">
    <Title>UI Block: Newsletter hero</Title>
    <Regions>
      <Region id="hero">
        <Component id="hero-newsletter" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">newsletter</Prop>
            <Prop name="badge" kind="static">Weekly insights</Prop>
            <Prop name="headline" kind="static">Teach customers how you build with metadata</Prop>
            <Prop name="description" kind="static">Pair your content series with a hero that focuses on education, highlights, and simple subscription flows.</Prop>
            <Prop name="highlights" kind="binding" contract="newsletterHighlights.items"/>
            <Prop name="form" kind="binding" contract="newsletterForm.value"/>
            <Prop name="primaryCta" kind="action" actionId="subscribe"/>
            <Prop name="secondaryCta" kind="action" actionId="read-archive"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="newsletterHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for hero-newsletter.highlights"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Frameworks for shipping metadata experiments.</Value>
              <Value>Playbooks from teams moving to blueprint-driven sites.</Value>
              <Value>Design patterns for marketing, docs, and success.</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="newsletterForm" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for hero-newsletter.form"/>
        </Contract>
        <Data>
          <Field name="placeholder">
            <Value>StewardTrack-fan@company.com</Value>
          </Field>
          <Field name="buttonLabel">
            <Value>Subscribe</Value>
          </Field>
          <Field name="disclaimer">
            <Value>We send one curated update each week.</Value>
          </Field>
          <Field name="url">
            <Value>/newsletter/join</Value>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="subscribe" kind="link">
        <Config>
          <Label>Subscribe</Label>
          <Url>/newsletter/subscribe</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="read-archive" kind="link">
        <Config>
          <Label>Read the archive</Label>
          <Url>/newsletter/archive</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
