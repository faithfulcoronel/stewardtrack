<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="feature/product-discovery" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-feature-product-discovery">
    <Title>UI Block: Product discovery feature section</Title>
    <Regions>
      <Region id="features">
        <Component id="feature-product-discovery" type="FeatureSection">
          <Props>
            <Prop name="variant" kind="static">icon-grid</Prop>
            <Prop name="eyebrow" kind="static">Product intelligence</Prop>
            <Prop name="title" kind="static">Illuminate every discovery signal</Prop>
            <Prop name="description" kind="static">Bundle research intake, synthesis, and roadmap conversations into a single surface that teams can skim in seconds.</Prop>
            <Prop name="features" kind="binding" contract="discoveryFeatures.items"/>
            <Prop name="footnote" kind="static">Designed for research operations teams coordinating insight backlogs across product, design, and go-to-market partners.</Prop>
            <Prop name="primaryCta" kind="action" actionId="start-discovery"/>
            <Prop name="secondaryCta" kind="action" actionId="view-research-playbook"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="discoveryFeatures" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for feature-product-discovery.features"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="icon">
