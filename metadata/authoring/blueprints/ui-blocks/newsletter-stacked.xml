<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="ui-blocks" route="newsletter/stacked" schemaVersion="1.0.0" contentVersion="1.0.0" locale="en-US">
  <Page id="ui-blocks-newsletter-stacked">
    <Title>UI Block: Newsletter stacked glow</Title>
    <Regions>
      <Region id="newsletter">
        <Component id="newsletter-stacked" type="NewsletterSection">
          <Props>
            <Prop name="variant" kind="static">stacked</Prop>
            <Prop name="badge" kind="static">StewardTrack Plus</Prop>
            <Prop name="headline" kind="static">The Metadata Playbook</Prop>
            <Prop name="description" kind="static">A Saturday deep dive on everything metadata-driven: system design, orchestration tips, and the experiments that moved the needle.</Prop>
            <Prop name="highlights" kind="binding" contract="stackedHighlights.items"/>
            <Prop name="form" kind="binding" contract="stackedForm.value"/>
            <Prop name="logos" kind="binding" contract="stackedLogos.items"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="stackedHighlights" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for newsletter-stacked.highlights"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Object>
                <Field name="title">
                  <Value>Blueprint teardowns</Value>
                </Field>
                <Field name="description">
                  <Value>We inspect how category leaders structure metadata-first launches.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Experiment vault</Value>
                </Field>
                <Field name="description">
                  <Value>Access frameworks for testing onboarding, docs, and lifecycle flows.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Office hours</Value>
                </Field>
                <Field name="description">
                  <Value>Subscribers submit metadata puzzles for live architecture reviews.</Value>
                </Field>
              </Object>
              <Object>
                <Field name="title">
                  <Value>Partner picks</Value>
                </Field>
                <Field name="description">
                  <Value>A curated list of APIs, automations, and schema updates worth trying.</Value>
                </Field>
              </Object>
            </Array>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="stackedForm" kind="static">
        <Contract>
          <Field name="value" path="$" description="Binding for newsletter-stacked.form"/>
        </Contract>
        <Data>
          <Field name="placeholder">
            <Value>strategist@company.com</Value>
          </Field>
          <Field name="buttonLabel">
            <Value>Get the playbook</Value>
          </Field>
          <Field name="disclaimer">
            <Value>Delivered every Saturday at 9am ET.</Value>
          </Field>
          <Field name="url">
            <Value>/newsletter/metadata-playbook/subscribe</Value>
          </Field>
        </Data>
      </DataSource>
      <DataSource id="stackedLogos" kind="static">
        <Contract>
          <Field name="items" path="items" description="Binding for newsletter-stacked.logos"/>
        </Contract>
        <Data>
          <Field name="items">
            <Array>
              <Value>Linear</Value>
              <Value>Descript</Value>
              <Value>Snowflake</Value>
              <Value>Sprig</Value>
            </Array>
          </Field>
        </Data>
      </DataSource>
    </DataSources>
  </Page>
</PageDefinition>
