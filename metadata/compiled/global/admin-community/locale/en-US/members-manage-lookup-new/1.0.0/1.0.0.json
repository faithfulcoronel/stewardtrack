  "page": {
    "id": "admin-community-membership-lookup-create",
    "title": "Quick add membership option",
    "regions": [
      {
        "id": "main",
        "components": [
          {
            "id": "lookup-header",
            "type": "HeaderSection",
            "props": {
              "variant": {
                "kind": "static",
                "value": "centered-pill"
              },
              "eyebrow": {
                "kind": "static",
                "value": "Membership settings"
              },
              "headline": {
                "kind": "expression",
                "expression": "\n              (() => {\n                const label = params.label ? String(params.label) : 'Lookup option';\n                return `Add ${label.toLowerCase()}`;\n              })()\n            "
              },
              "description": {
                "kind": "expression",
                "expression": "\n              (() => {\n                const label = params.label ? String(params.label) : 'your next option';\n                return `Create a reusable choice for ${label.toLowerCase()} without leaving your workflow.`;\n              })()\n            "
              }
            }
          },
          {
            "id": "lookup-form",
            "type": "AdminLookupQuickCreate",
            "props": {
              "lookupId": {
                "kind": "expression",
                "expression": "String(params.lookupId ?? '')"
              },
              "lookupLabel": {
                "kind": "expression",
                "expression": "String(params.label ?? 'Lookup option')"
              },
              "description": {
                "kind": "static",
                "value": "Give the option a clear name. The code is generated automatically and can be refined before saving."
              },
              "submitLabel": {
                "kind": "static",
                "value": "Save option"
              },
              "successMessage": {
                "kind": "expression",
                "expression": "\n              (() => {\n                const label = params.label ? String(params.label) : 'Lookup option';\n                return `${label} saved`;\n              })()\n            "
              }
            }
          }
        ]
      }
    ]
  },
