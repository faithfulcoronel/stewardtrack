  "checksum": "41740e4457a4a6f5608dda306e537b143b9df1858f300098a7bb1a4da31ce0ef",
  "kind": "blueprint",
  "layer": {
    "module": "ui-blocks",
    "route": "newsletter/stats",
    "tenant": null,
    "role": null,
    "variant": null,
    "locale": "en-US"
  },
  "page": {
    "id": "ui-blocks-newsletter-stats",
    "title": "UI Block: Newsletter stats glow",
    "regions": [
      {
        "id": "newsletter",
        "components": [
          {
            "id": "newsletter-stats",
            "type": "NewsletterSection",
            "props": {
              "variant": {
                "kind": "static",
                "value": "stats"
              },
              "eyebrow": {
                "kind": "static",
                "value": "Flowspace Signals"
              },
              "headline": {
                "kind": "static",
                "value": "Understand the health of your metadata pipeline"
              },
              "description": {
                "kind": "static",
                "value": "A mid-week pulse on ingestion uptime, experiment velocity, and the automations teams are adopting right now."
              },
              "stats": {
                "kind": "binding",
                "source": "statsMetrics",
                "path": "items"
              },
              "form": {
                "kind": "binding",
                "source": "statsForm",
                "path": "$"
              },
              "primaryCta": {
                "kind": "action",
                "actionId": "view-dashboard"
              },
              "secondaryCta": {
                "kind": "action",
                "actionId": "download-sample"
              }
            }
          }
        ]
      }
    ],
    "dataSources": [
      {
        "id": "statsMetrics",
        "kind": "static",
        "config": {
          "value": {
            "items": [
              {
                "label": "Average uptime",
                "value": "99.4%",
                "caption": "Across 12k ingestion jobs tracked last month."
              },
              {
                "label": "Experiment lift",
                "value": "+18%",
                "caption": "Median activation improvement from metadata-led tests."
              },
              {
                "label": "Lifecycle triggers",
                "value": "43",
                "caption": "Workflows subscribers automated in the last 30 days."
              }
            ]
          }
        }
      },
      {
        "id": "statsForm",
        "kind": "static",
        "config": {
          "value": {
            "placeholder": "data.ops@company.com",
            "buttonLabel": "Monitor my pipeline",
            "disclaimer": "Sent every Wednesday with fresh telemetry.",
            "url": "/newsletter/flowspace-signals/subscribe"
          }
        }
      }
    ],
    "actions": [
      {
        "id": "view-dashboard",
        "kind": "link",
        "config": {
          "Label": "Open live dashboard",
          "Url": "/analytics/pipeline-health",
          "Variant": "secondary"
        }
      },
      {
        "id": "download-sample",
        "kind": "link",
        "config": {
          "Label": "Download sample report",
          "Url": "/newsletter/flowspace-signals/sample.pdf",
          "Variant": "ghost"
        }
      }
    ]
  },
  "sourcePath": "metadata/authoring/blueprints/ui-blocks/newsletter-stats.xml"
