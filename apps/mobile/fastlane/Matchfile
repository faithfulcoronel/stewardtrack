# StewardTrack Fastlane Match Configuration
#
# Match is used to sync certificates and provisioning profiles
# across team members and CI/CD systems.
#
# See: https://docs.fastlane.tools/actions/match/

# Git repo for storing encrypted certificates
git_url("https://github.com/stewardtrack/certificates.git")

# Storage mode: git, google_cloud, or s3
storage_mode("git")

# Type of provisioning profile
type("appstore") # Can also be: development, adhoc, enterprise

# App identifier (bundle ID)
app_identifier(["com.stewardtrack.app"])

# Apple ID username
username("developer@stewardtrack.com")

# Team ID
team_id("YOUR_TEAM_ID")

# Don't clone the whole repo, just the branch
shallow_clone(true)

# Automatically create missing profiles
force_for_new_devices(true)

# Clone branch
# git_branch("main")

# Platform
platform("ios")
