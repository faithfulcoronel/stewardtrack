{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@stewardtrack/shared-types": ["../../packages/shared-types/src"],
      "@stewardtrack/shared-types/*": ["../../packages/shared-types/src/*"],
      "@stewardtrack/api-client": ["../../packages/api-client/src"],
      "@stewardtrack/api-client/*": ["../../packages/api-client/src/*"],
      "@stewardtrack/native-bridge": ["../../packages/native-bridge/src"],
      "@stewardtrack/native-bridge/*": ["../../packages/native-bridge/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
