<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="reports/trial-balance" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.reports" requiredPermissions="finance:reports" locale="en-US">
  <Page id="admin-finance-reports-trial-balance">
    <Title>Trial balance</Title>
    <Regions>
      <Region id="main">
        <Component id="report-header" type="AdminReportHeader">
          <Props>
            <Prop name="title" kind="static">Trial Balance</Prop>
            <Prop name="description" kind="static">View income and expense balances by category, source, or fund.</Prop>
            <Prop name="fiscalYearSelector" kind="binding" contract="reportHeader.fiscalYearSelector"/>
            <Prop name="viewBySelector" kind="binding" contract="reportHeader.viewBySelector"/>
            <Prop name="exportActions" kind="binding" contract="reportHeader.exportActions"/>
            <Prop name="reportUrl" kind="static">/admin/finance/reports/trial-balance</Prop>
            <Prop name="showGenerateButton" kind="static">true</Prop>
            <Prop name="generateButtonLabel" kind="static">Generate Report</Prop>
          </Props>
        </Component>
        <Component id="hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="binding" contract="hero.variant"/>
            <Prop name="eyebrow" kind="binding" contract="hero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="hero.headline"/>
            <Prop name="description" kind="binding" contract="hero.description"/>
            <Prop name="metrics" kind="binding" contract="hero.metrics"/>
            <Prop name="secondaryCta" kind="action" actionId="back-to-reports"/>
          </Props>
        </Component>
        <Component id="balance-verification" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Financial summary</Prop>
            <Prop name="description" kind="static">Overview of total income received and expenses spent.</Prop>
            <Prop name="metrics" kind="binding" contract="balanceVerification.items"/>
          </Props>
        </Component>
        <Component id="trial-balance-table" type="AdminReportTable">
          <Props>
            <Prop name="title" kind="binding" contract="trialBalanceData.title"/>
            <Prop name="rows" kind="binding" contract="trialBalanceData.rows"/>
            <Prop name="columns" kind="binding" contract="trialBalanceData.columns"/>
            <Prop name="periodColumns" kind="binding" contract="trialBalanceData.periodColumns"/>
            <Prop name="subtotals" kind="binding" contract="trialBalanceData.subtotals"/>
            <Prop name="grandTotal" kind="binding" contract="trialBalanceData.grandTotal"/>
            <Prop name="currency" kind="binding" contract="trialBalanceData.currency"/>
            <Prop name="emptyState" kind="static">{"title": "No data available", "description": "No transactions have been recorded for the selected period."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="reportHeader" kind="service">
        <Contract>
          <Field name="fiscalYearSelector" path="fiscalYearSelector" description="Fiscal year dropdown options"/>
          <Field name="viewBySelector" path="viewBySelector" description="View by dropdown options"/>
          <Field name="exportActions" path="exportActions" description="Export action buttons"/>
        </Contract>
        <Config>
          <Handler>admin-finance.reports.trialBalance.header</Handler>
        </Config>
      </DataSource>
      <DataSource id="hero" kind="service">
        <Contract>
          <Field name="variant" path="variant" description="Hero variant style"/>
          <Field name="eyebrow" path="eyebrow" description="Eyebrow text"/>
          <Field name="headline" path="headline" description="Main headline"/>
          <Field name="description" path="description" description="Description text"/>
          <Field name="metrics" path="metrics" description="Metric values"/>
        </Contract>
        <Config>
          <Handler>admin-finance.reports.trialBalance.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="balanceVerification" kind="service">
        <Contract>
          <Field name="items" path="items" description="Balance verification cards"/>
        </Contract>
        <Config>
          <Handler>admin-finance.reports.trialBalance.verification</Handler>
        </Config>
      </DataSource>
      <DataSource id="trialBalanceData" kind="service">
        <Contract>
          <Field name="title" path="title" description="Dynamic table title based on view by selection"/>
          <Field name="rows" path="rows" description="Trial balance data rows"/>
          <Field name="columns" path="columns" description="Table columns"/>
          <Field name="periodColumns" path="periodColumns" description="Dynamic period columns for fiscal year view"/>
          <Field name="subtotals" path="subtotals" description="Subtotals by account type"/>
          <Field name="grandTotal" path="grandTotal" description="Grand totals"/>
          <Field name="currency" path="currency" description="Tenant currency code for formatting"/>
        </Contract>
        <Config>
          <Handler>admin-finance.reports.trialBalance.data</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="back-to-reports" kind="link">
        <Config>
          <Label>Back to reports</Label>
          <Url>/admin/finance/reports</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="export-pdf" kind="submit">
        <Config>
          <Label>Export PDF</Label>
          <Handler>admin-finance.reports.export</Handler>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="export-excel" kind="submit">
        <Config>
          <Label>Export Excel</Label>
          <Handler>admin-finance.reports.export</Handler>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="print" kind="client">
        <Config>
          <Label>Print</Label>
          <Handler>printReport</Handler>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
