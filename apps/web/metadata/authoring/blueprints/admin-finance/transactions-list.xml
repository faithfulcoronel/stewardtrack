<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="transactions/list" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.core" requiredPermissions="finance:view" locale="en-US">
  <Page id="admin-finance-transactions-list">
    <Title>Financial transactions</Title>
    <Regions>
      <Region id="main">
        <Component id="list-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="listHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="listHero.headline"/>
            <Prop name="description" kind="binding" contract="listHero.description"/>
            <Prop name="metrics" kind="binding" contract="listHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="record-transaction"/>
            <Prop name="secondaryCta" kind="action" actionId="back-to-dashboard"/>
          </Props>
        </Component>
        <Component id="transaction-summary" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Period summary</Prop>
            <Prop name="description" kind="static">Income, expenses, and net cash flow for the current period.</Prop>
            <Prop name="metrics" kind="binding" contract="transactionSummary.items"/>
          </Props>
        </Component>
        <Component id="status-overview" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Transaction status</Prop>
            <Prop name="description" kind="static">Pending approvals and draft transactions requiring attention.</Prop>
            <Prop name="metrics" kind="binding" contract="statusOverview.items"/>
          </Props>
        </Component>
        <Component id="transactions-grid" type="AdminDataGridSection">
          <Props>
            <Prop name="title" kind="static">Transaction ledger</Prop>
            <Prop name="description" kind="static">View, filter, and manage all income and expense transactions.</Prop>
            <Prop name="rows" kind="binding" contract="transactionsTable.rows"/>
            <Prop name="columns" kind="binding" contract="transactionsTable.columns"/>
            <Prop name="filters" kind="binding" contract="transactionsTable.filters"/>
            <Prop name="emptyState" kind="static">{"title": "No transactions recorded yet", "description": "Start tracking your church finances by recording income from tithes, offerings, and donations, or log expenses for ministry operations. Click 'Record transaction' above to get started."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="listHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Binding for list-hero.eyebrow"/>
          <Field name="headline" path="headline" description="Binding for list-hero.headline"/>
          <Field name="description" path="description" description="Binding for list-hero.description"/>
          <Field name="metrics" path="metrics" description="Binding for list-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.list.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="transactionSummary" kind="service">
        <Contract>
          <Field name="items" path="items" description="Transaction summary cards"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.list.summary</Handler>
        </Config>
      </DataSource>
      <DataSource id="statusOverview" kind="service">
        <Contract>
          <Field name="items" path="items" description="Status overview cards"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.list.statusOverview</Handler>
        </Config>
      </DataSource>
      <DataSource id="transactionsTable" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Binding for transactions-grid.rows"/>
          <Field name="columns" path="columns" description="Binding for transactions-grid.columns"/>
          <Field name="filters" path="filters" description="Binding for transactions-grid.filters"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.list.table</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="record-transaction" kind="link">
        <RBAC requirePermissions="finance:edit" />
        <Config>
          <Label>Record transaction</Label>
          <Url>/admin/finance/transactions/entry</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="back-to-dashboard" kind="link">
        <Config>
          <Label>Dashboard</Label>
          <Url>/admin/finance</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
