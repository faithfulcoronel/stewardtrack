<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="transactions/profile" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.core" requiredPermissions="finance:view" locale="en-US">
  <Page id="admin-finance-transactions-profile">
    <Title>Transaction details</Title>
    <Regions>
      <Region id="main">
        <Component id="hero-section" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">minimal</Prop>
            <Prop name="eyebrow" kind="binding" contract="transactionProfile.eyebrow"/>
            <Prop name="headline" kind="binding" contract="transactionProfile.title"/>
            <Prop name="description" kind="binding" contract="transactionProfile.subtitle"/>
            <Prop name="secondaryCta" kind="static">{"label": "Back to transactions", "href": "/admin/finance/transactions", "variant": "secondary"}</Prop>
          </Props>
        </Component>
        <Component id="transaction-details" type="AdminDetailPanels">
          <Props>
            <Prop name="panels" kind="binding" contract="transactionDetails.panels"/>
          </Props>
        </Component>
        <Component id="line-items" type="AdminDataGridSection">
          <Props>
            <Prop name="title" kind="static">Line items</Prop>
            <Prop name="description" kind="static">Individual entries that make up this transaction.</Prop>
            <Prop name="rows" kind="binding" contract="lineItems.rows"/>
            <Prop name="columns" kind="binding" contract="lineItems.columns"/>
            <Prop name="emptyState" kind="static">{"title": "No line items", "description": "This transaction has no line items."}</Prop>
          </Props>
        </Component>
        <Component id="journal-entries-collapsible" type="AdminCollapsibleSection">
          <Props>
            <Prop name="title" kind="static">Journal entries</Prop>
            <Prop name="description" kind="static">Double-entry bookkeeping entries created by this transaction.</Prop>
            <Prop name="defaultOpen" kind="static">false</Prop>
          </Props>
          <Children>
            <Component id="journal-entries-grid" type="AdminDataGridSection">
              <Props>
                <Prop name="rows" kind="binding" contract="journalEntries.rows"/>
                <Prop name="columns" kind="binding" contract="journalEntries.columns"/>
                <Prop name="emptyState" kind="static">{"title": "No journal entries", "description": "Journal entries will appear here when the transaction is posted."}</Prop>
              </Props>
            </Component>
          </Children>
        </Component>
        <Component id="approval-history" type="AdminActivityTimeline">
          <Props>
            <Prop name="title" kind="static">Approval history</Prop>
            <Prop name="description" kind="static">Timeline of status changes and approvals.</Prop>
            <Prop name="events" kind="binding" contract="approvalHistory.items"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="transactionProfile" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Transaction number"/>
          <Field name="title" path="title" description="Transaction description"/>
          <Field name="subtitle" path="subtitle" description="Transaction date"/>
          <Field name="badge" path="badge" description="Status badge"/>
          <Field name="metrics" path="metrics" description="Key transaction metrics"/>
          <Field name="actions" path="actions" description="Available actions based on status"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.profile.header</Handler>
        </Config>
      </DataSource>
      <DataSource id="transactionDetails" kind="service">
        <Contract>
          <Field name="panels" path="panels" description="Transaction detail panels"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.profile.details</Handler>
        </Config>
      </DataSource>
      <DataSource id="lineItems" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Line item rows"/>
          <Field name="columns" path="columns" description="Line item columns"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.profile.lineItems</Handler>
        </Config>
      </DataSource>
      <DataSource id="journalEntries" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Journal entry rows"/>
          <Field name="columns" path="columns" description="Journal entry columns"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.profile.journalEntries</Handler>
        </Config>
      </DataSource>
      <DataSource id="approvalHistory" kind="service">
        <Contract>
          <Field name="items" path="items" description="Approval history timeline"/>
        </Contract>
        <Config>
          <Handler>admin-finance.transactions.profile.approvalHistory</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="edit-transaction" kind="link">
        <RBAC requirePermissions="finance:edit" />
        <Config>
          <Label>Edit transaction</Label>
          <Url>/admin/finance/transactions/entry?transactionId={{id}}</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="back-to-list" kind="link">
        <Config>
          <Label>Back to transactions</Label>
          <Url>/admin/finance/transactions</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="approve-transaction" kind="submit">
        <RBAC requirePermissions="finance:approve" />
        <Config>
          <Label>Approve</Label>
          <Handler>admin-finance.transactions.approve</Handler>
          <SuccessMessage>Transaction approved</SuccessMessage>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="void-transaction" kind="submit">
        <RBAC requirePermissions="finance:void" />
        <Config>
          <Label>Void</Label>
          <Handler>admin-finance.transactions.void</Handler>
          <ConfirmTitle>Void Transaction</ConfirmTitle>
          <ConfirmDescription>Are you sure you want to void this transaction? This action cannot be undone.</ConfirmDescription>
          <SuccessMessage>Transaction voided</SuccessMessage>
          <Variant>destructive</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
