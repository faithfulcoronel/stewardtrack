<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="sources/list" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.core" requiredPermissions="finance:view" locale="en-US">
  <Page id="admin-finance-sources-list">
    <Title>Financial sources</Title>
    <Regions>
      <Region id="main">
        <Component id="list-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="listHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="listHero.headline"/>
            <Prop name="description" kind="binding" contract="listHero.description"/>
            <Prop name="metrics" kind="binding" contract="listHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="add-source"/>
            <Prop name="secondaryCta" kind="action" actionId="back-to-dashboard"/>
          </Props>
        </Component>
        <Component id="source-type-summary" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Source type breakdown</Prop>
            <Prop name="description" kind="static">Overview of your financial sources by type with total balances.</Prop>
            <Prop name="metrics" kind="binding" contract="sourceTypeSummary.items"/>
          </Props>
        </Component>
        <Component id="sources-grid" type="AdminDataGridSection">
          <Props>
            <Prop name="title" kind="static">Money sources</Prop>
            <Prop name="description" kind="static">Manage bank accounts, cash funds, digital wallets, and other financial sources.</Prop>
            <Prop name="rows" kind="binding" contract="sourcesTable.rows"/>
            <Prop name="columns" kind="binding" contract="sourcesTable.columns"/>
            <Prop name="filters" kind="binding" contract="sourcesTable.filters"/>
            <Prop name="emptyState" kind="static">{"title": "No sources configured", "description": "Add your first financial source to start tracking money movement."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="listHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Binding for list-hero.eyebrow"/>
          <Field name="headline" path="headline" description="Binding for list-hero.headline"/>
          <Field name="description" path="description" description="Binding for list-hero.description"/>
          <Field name="metrics" path="metrics" description="Binding for list-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-finance.sources.list.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="sourceTypeSummary" kind="service">
        <Contract>
          <Field name="items" path="items" description="Source type summary cards"/>
        </Contract>
        <Config>
          <Handler>admin-finance.sources.list.typeSummary</Handler>
        </Config>
      </DataSource>
      <DataSource id="sourcesTable" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Binding for sources-grid.rows"/>
          <Field name="columns" path="columns" description="Binding for sources-grid.columns"/>
          <Field name="filters" path="filters" description="Binding for sources-grid.filters"/>
        </Contract>
        <Config>
          <Handler>admin-finance.sources.list.table</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="add-source" kind="link">
        <RBAC requirePermissions="finance:edit" />
        <Config>
          <Label>Add source</Label>
          <Url>/admin/finance/sources/manage</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="back-to-dashboard" kind="link">
        <Config>
          <Label>Dashboard</Label>
          <Url>/admin/finance</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
