<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="budgets/list" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.budgets" requiredPermissions="finance:view" locale="en-US">
  <Page id="admin-finance-budgets-list">
    <Title>Budget management</Title>
    <Regions>
      <Region id="main">
        <Component id="list-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="listHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="listHero.headline"/>
            <Prop name="description" kind="binding" contract="listHero.description"/>
            <Prop name="metrics" kind="binding" contract="listHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="add-budget"/>
            <Prop name="secondaryCta" kind="action" actionId="back-to-dashboard"/>
          </Props>
        </Component>
        <Component id="budget-performance" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Budget performance</Prop>
            <Prop name="description" kind="static">Overall budget utilization and variance analysis.</Prop>
            <Prop name="metrics" kind="binding" contract="budgetPerformance.items"/>
          </Props>
        </Component>
        <Component id="budgets-grid" type="AdminDataGridSection">
          <Props>
            <Prop name="title" kind="static">Budget allocations</Prop>
            <Prop name="description" kind="static">Track spending against approved budget allocations by category.</Prop>
            <Prop name="rows" kind="binding" contract="budgetsTable.rows"/>
            <Prop name="columns" kind="binding" contract="budgetsTable.columns"/>
            <Prop name="filters" kind="binding" contract="budgetsTable.filters"/>
            <Prop name="emptyState" kind="static">{"title": "No budgets configured", "description": "Create your first budget to start tracking spending."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="listHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Binding for list-hero.eyebrow"/>
          <Field name="headline" path="headline" description="Binding for list-hero.headline"/>
          <Field name="description" path="description" description="Binding for list-hero.description"/>
          <Field name="metrics" path="metrics" description="Binding for list-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-finance.budgets.list.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="budgetPerformance" kind="service">
        <Contract>
          <Field name="items" path="items" description="Budget performance cards"/>
        </Contract>
        <Config>
          <Handler>admin-finance.budgets.list.performance</Handler>
        </Config>
      </DataSource>
      <DataSource id="budgetsTable" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Binding for budgets-grid.rows"/>
          <Field name="columns" path="columns" description="Binding for budgets-grid.columns"/>
          <Field name="filters" path="filters" description="Binding for budgets-grid.filters"/>
        </Contract>
        <Config>
          <Handler>admin-finance.budgets.list.table</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="add-budget" kind="link">
        <RBAC requirePermissions="finance:admin" />
        <Config>
          <Label>Add budget</Label>
          <Url>/admin/finance/budgets/manage</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="back-to-dashboard" kind="link">
        <Config>
          <Label>Dashboard</Label>
          <Url>/admin/finance</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
