<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-finance" route="opening-balances/manage" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="finance.core" requiredPermissions="finance:manage" locale="en-US">
  <Page id="admin-finance-opening-balances-manage">
    <Title>Manage opening balance</Title>
    <Regions>
      <Region id="main">
        <Component id="form-header" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">minimal</Prop>
            <Prop name="eyebrow" kind="binding" contract="formHeader.eyebrow"/>
            <Prop name="headline" kind="binding" contract="formHeader.headline"/>
            <Prop name="description" kind="binding" contract="formHeader.description"/>
          </Props>
        </Component>
        <Component id="opening-balance-form" type="AdminFormSection">
          <Props>
            <Prop name="title" kind="static">Opening balance information</Prop>
            <Prop name="description" kind="static">Set the opening balance amount for a fund in a specific fiscal year.</Prop>
            <Prop name="fields" kind="binding" contract="openingBalanceForm.fields"/>
            <Prop name="initialValues" kind="binding" contract="openingBalanceForm.values"/>
            <Prop name="validation" kind="binding" contract="openingBalanceForm.validation"/>
            <Prop name="submitAction" kind="action" actionId="save-opening-balance"/>
            <Prop name="cancelAction" kind="action" actionId="cancel"/>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="formHeader" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Form eyebrow text"/>
          <Field name="headline" path="headline" description="Form headline"/>
          <Field name="description" path="description" description="Form description"/>
        </Contract>
        <Config>
          <Handler>admin-finance.opening-balances.manage.header</Handler>
        </Config>
      </DataSource>
      <DataSource id="openingBalanceForm" kind="service">
        <Contract>
          <Field name="fields" path="fields" description="Form field definitions"/>
          <Field name="values" path="values" description="Current form values"/>
          <Field name="validation" path="validation" description="Validation rules"/>
        </Contract>
        <Config>
          <Handler>admin-finance.opening-balances.manage.form</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="save-opening-balance" kind="submit">
        <Config>
          <Label>Save opening balance</Label>
          <Handler>admin-finance.opening-balances.save</Handler>
          <SuccessUrl>/admin/finance/opening-balances</SuccessUrl>
          <SuccessMessage>Opening balance saved successfully</SuccessMessage>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="cancel" kind="link">
        <Config>
          <Label>Cancel</Label>
          <Url>/admin/finance/opening-balances</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
