<?xml version="1.0" encoding="UTF-8"?>
<!--
================================================================================
CAMPAIGN PROFILE PAGE - METADATA-DRIVEN ARCHITECTURE
================================================================================

ARCHITECTURE OVERVIEW:
This XML blueprint defines the campaign profile/detail page that shows
a single campaign's details, delivery statistics, and recipient list.

FEATURE: Communication
- Campaign details and content preview
- Delivery statistics (sent, delivered, opened, clicked)
- Recipient list with individual status
- Actions: Edit, Duplicate, Resend, Delete

================================================================================
-->
<PageDefinition
  kind="blueprint"
  module="admin-communication"
  route="campaigns/profile"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  featureCode="communication.core"
  requiredPermissions="members:view"
  locale="en-US">

  <Page id="admin-communication-campaign-profile">
    <Title>Campaign Details</Title>

    <Regions>
      <Region id="main">
        <!--
        HERO SECTION: Campaign summary with status
        -->
        <Component id="campaign-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="campaignHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="campaignHero.headline"/>
            <Prop name="description" kind="binding" contract="campaignHero.description"/>
            <Prop name="metrics" kind="binding" contract="campaignHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="edit-campaign"/>
            <Prop name="secondaryCta" kind="action" actionId="duplicate-campaign"/>
          </Props>
        </Component>

        <!--
        DETAIL PANELS: Campaign information and content
        -->
        <Component id="campaign-details" type="AdminDetailPanels">
          <Props>
            <Prop name="panels" kind="binding" contract="campaignDetails.panels"/>
          </Props>
        </Component>

        <!--
        DELIVERY STATS: Real-time delivery analytics
        -->
        <Component id="delivery-stats" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Delivery statistics</Prop>
            <Prop name="description" kind="static">Track message delivery and engagement metrics.</Prop>
            <Prop name="metrics" kind="binding" contract="deliveryStats.metrics"/>
            <Prop name="footnote" kind="binding" contract="deliveryStats.footnote"/>
          </Props>
        </Component>

        <!--
        RECIPIENTS TABLE: List of recipients with status
        -->
        <Component id="recipients-table" type="AdminAgGrid">
          <Props>
            <Prop name="title" kind="static">Recipients</Prop>
            <Prop name="description" kind="static">Individual recipient delivery status.</Prop>
            <Prop name="rows" kind="binding" contract="recipientsTable.rows"/>
            <Prop name="columns" kind="binding" contract="recipientsTable.columns"/>
            <Prop name="filters" kind="binding" contract="recipientsTable.filters"/>
            <Prop name="emptyState" kind="binding" contract="recipientsTable.emptyState"/>
            <Prop name="searchable" kind="static">true</Prop>
            <Prop name="searchPlaceholder" kind="static">Search recipients...</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>

    <DataSources>
      <!-- Hero section data -->
      <DataSource id="campaignHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow" description="Campaign type badge"/>
          <Field name="headline" path="headline" description="Campaign name"/>
          <Field name="description" path="description" description="Campaign summary"/>
          <Field name="metrics" path="metrics" description="Key campaign metrics"/>
        </Contract>
        <Config>
          <Handler>admin-communication.campaigns.profile.hero</Handler>
        </Config>
      </DataSource>

      <!-- Campaign details panels -->
      <DataSource id="campaignDetails" kind="service">
        <Contract>
          <Field name="panels" path="panels" description="Detail panel configurations"/>
        </Contract>
        <Config>
          <Handler>admin-communication.campaigns.profile.details</Handler>
        </Config>
      </DataSource>

      <!-- Delivery statistics -->
      <DataSource id="deliveryStats" kind="service">
        <Contract>
          <Field name="metrics" path="metrics" description="Delivery metric cards"/>
          <Field name="footnote" path="footnote" description="Last updated timestamp"/>
        </Contract>
        <Config>
          <Handler>admin-communication.campaigns.profile.stats</Handler>
        </Config>
      </DataSource>

      <!-- Recipients table -->
      <DataSource id="recipientsTable" kind="service">
        <Contract>
          <Field name="rows" path="rows" description="Recipient data rows"/>
          <Field name="columns" path="columns" description="Table column definitions"/>
          <Field name="filters" path="filters" description="Filter configurations"/>
          <Field name="emptyState" path="emptyState" description="Empty state configuration"/>
        </Contract>
        <Config>
          <Handler>admin-communication.campaigns.profile.recipients</Handler>
        </Config>
      </DataSource>
    </DataSources>

    <Actions>
      <Action id="edit-campaign" kind="link">
        <Config>
          <Label>Edit campaign</Label>
          <Url>/admin/communication/compose?id={{campaignId}}</Url>
          <Variant>primary</Variant>
        </Config>
      </Action>
      <Action id="duplicate-campaign" kind="link">
        <Config>
          <Label>Duplicate</Label>
          <Url>/admin/communication/compose?duplicate={{campaignId}}</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
      <Action id="back-to-campaigns" kind="link">
        <Config>
          <Label>Back to campaigns</Label>
          <Url>/admin/communication/campaigns</Url>
          <Variant>ghost</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
