<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-settings" route="settings/overview" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="settings.core" requiredPermissions="settings:view" locale="en-US">
  <Page id="admin-settings-overview">
    <Title>Admin settings overview</Title>
    <Regions>
      <Region id="main">
        <Component id="settings-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="eyebrow" kind="binding" contract="settingsOverview.heroEyebrow"/>
            <Prop name="headline" kind="binding" contract="settingsOverview.heroHeadline"/>
            <Prop name="description" kind="binding" contract="settingsOverview.heroDescription"/>
            <Prop name="highlights" kind="binding" contract="settingsOverview.heroHighlights"/>
            <Prop name="metrics" kind="binding" contract="settingsOverview.heroMetrics"/>
            <Prop name="primaryCta" kind="binding" contract="settingsOverview.heroPrimaryCta"/>
            <Prop name="secondaryCta" kind="binding" contract="settingsOverview.heroSecondaryCta"/>
          </Props>
        </Component>
        <Component id="settings-tabs" type="AdminSettingsTabs">
          <Props>
            <Prop name="tabs" kind="binding" contract="settingsOverview.tabs"/>
            <Prop name="defaultTab" kind="static">general</Prop>
          </Props>
          <Children>
            <Component id="general-tab-content" type="Fragment">
              <Children>
                <Component id="settings-summary" type="AdminDetailPanels">
                  <Props>
                    <Prop name="columns" kind="static">1</Prop>
                    <Prop name="panels" kind="binding" contract="settingsOverview.summaryPanels"/>
                  </Props>
                </Component>
                <Component id="settings-form" type="AdminFormSection">
                  <Props>
                    <Prop name="title" kind="binding" contract="settingsOverview.formTitle"/>
                    <Prop name="description" kind="binding" contract="settingsOverview.formDescription"/>
                    <Prop name="fields" kind="binding" contract="settingsOverview.formFields"/>
                    <Prop name="initialValues" kind="binding" contract="settingsOverview.formInitialValues"/>
                    <Prop name="submitLabel" kind="binding" contract="settingsOverview.formSubmitLabel"/>
                    <Prop name="mode" kind="binding" contract="settingsOverview.formMode"/>
                    <Prop name="footnote" kind="binding" contract="settingsOverview.formFootnote"/>
                    <Prop name="contextParams" kind="binding" contract="settingsOverview.formContextParams"/>
                    <Prop name="submitAction" kind="action" actionId="save-settings"/>
                  </Props>
                </Component>
              </Children>
            </Component>
            <Component id="notifications-tab-content" type="AdminNotificationPreferences">
              <Props>
                <Prop name="title" kind="binding" contract="settingsOverview.notificationTitle"/>
                <Prop name="description" kind="binding" contract="settingsOverview.notificationDescription"/>
                <Prop name="showQuietHours" kind="static">true</Prop>
                <Prop name="showDigestOptions" kind="static">true</Prop>
              </Props>
            </Component>
            <Component id="integrations-tab-content" type="AdminIntegrationSettings">
              <Props>
                <Prop name="title" kind="binding" contract="settingsOverview.integrationsTitle"/>
                <Prop name="description" kind="binding" contract="settingsOverview.integrationsDescription"/>
                <Prop name="showTwilio" kind="static">true</Prop>
                <Prop name="showEmail" kind="static">true</Prop>
                <Prop name="showWebhook" kind="static">true</Prop>
              </Props>
            </Component>
            <Component id="templates-tab-content" type="AdminNotificationTemplates">
              <Props>
                <Prop name="title" kind="static">Notification Templates</Prop>
                <Prop name="description" kind="static">Customize notification content for different channels and events</Prop>
              </Props>
            </Component>
            <Component id="analytics-tab-content" type="AdminNotificationAnalytics">
              <Props>
                <Prop name="title" kind="static">Notification Analytics</Prop>
                <Prop name="description" kind="static">Monitor delivery rates, channel performance, and notification trends</Prop>
              </Props>
            </Component>
            <Component id="scheduled-tab-content" type="AdminScheduledNotifications">
              <Props>
                <Prop name="title" kind="static">Scheduled Notifications</Prop>
                <Prop name="description" kind="static">View and manage notifications scheduled for future delivery</Prop>
              </Props>
            </Component>
            <Component id="ai-credits-tab-content" type="AdminAICreditsSettings">
              <Props>
                <Prop name="balance" kind="binding" contract="settingsOverview.aiCreditsBalance"/>
                <Prop name="packages" kind="binding" contract="settingsOverview.aiCreditsPackages"/>
                <Prop name="purchaseHistory" kind="binding" contract="settingsOverview.aiCreditsPurchaseHistory"/>
                <Prop name="usageStats" kind="binding" contract="settingsOverview.aiCreditsUsageStats"/>
                <Prop name="autoRecharge" kind="binding" contract="settingsOverview.aiCreditsAutoRecharge"/>
                <Prop name="currency" kind="binding" contract="settingsOverview.aiCreditsCurrency"/>
              </Props>
            </Component>
            <Component id="media-tab-content" type="AdminMediaGallery">
              <Props>
                <Prop name="items" kind="binding" contract="settingsOverview.mediaItems"/>
                <Prop name="storageUsage" kind="binding" contract="settingsOverview.mediaStorageUsage"/>
                <Prop name="categories" kind="binding" contract="settingsOverview.mediaCategories"/>
              </Props>
            </Component>
          </Children>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="settingsOverview" kind="service">
        <Contract>
          <Field name="heroEyebrow" path="hero.eyebrow" description="Binding for settings-hero.eyebrow"/>
          <Field name="heroHeadline" path="hero.headline" description="Binding for settings-hero.headline"/>
          <Field name="heroDescription" path="hero.description" description="Binding for settings-hero.description"/>
          <Field name="heroHighlights" path="hero.highlights" description="Binding for settings-hero.highlights"/>
          <Field name="heroMetrics" path="hero.metrics" description="Binding for settings-hero.metrics"/>
          <Field name="heroPrimaryCta" path="hero.primaryCta" description="Binding for settings-hero.primaryCta"/>
          <Field name="heroSecondaryCta" path="hero.secondaryCta" description="Binding for settings-hero.secondaryCta"/>
          <Field name="tabs" path="tabs" description="Tab configuration for settings tabs"/>
          <Field name="summaryPanels" path="summary.panels" description="Binding for settings-summary.panels"/>
          <Field name="formTitle" path="form.title" description="Binding for settings-form.title"/>
          <Field name="formDescription" path="form.description" description="Binding for settings-form.description"/>
          <Field name="formFields" path="form.fields" description="Binding for settings-form.fields"/>
          <Field name="formInitialValues" path="form.initialValues" description="Binding for settings-form.initialValues"/>
          <Field name="formSubmitLabel" path="form.submitLabel" description="Binding for settings-form.submitLabel"/>
          <Field name="formMode" path="form.mode" description="Binding for settings-form.mode"/>
          <Field name="formFootnote" path="form.footnote" description="Binding for settings-form.footnote"/>
          <Field name="formContextParams" path="form.contextParams" description="Binding for settings-form.contextParams"/>
          <Field name="notificationTitle" path="notification.title" description="Binding for notification-preferences.title"/>
          <Field name="notificationDescription" path="notification.description" description="Binding for notification-preferences.description"/>
          <Field name="integrationsTitle" path="integrations.title" description="Binding for integrations settings title"/>
          <Field name="integrationsDescription" path="integrations.description" description="Binding for integrations settings description"/>
          <Field name="aiCreditsBalance" path="aiCredits.balance" description="AI Credits balance information"/>
          <Field name="aiCreditsPackages" path="aiCredits.packages" description="Available AI credit packages"/>
          <Field name="aiCreditsPurchaseHistory" path="aiCredits.purchaseHistory" description="AI credits purchase history"/>
          <Field name="aiCreditsUsageStats" path="aiCredits.usageStats" description="AI credits usage statistics"/>
          <Field name="aiCreditsAutoRecharge" path="aiCredits.autoRecharge" description="Auto-recharge configuration"/>
          <Field name="aiCreditsCurrency" path="aiCredits.currency" description="Tenant currency for AI credits"/>
          <Field name="mediaItems" path="media.items" description="Media gallery items"/>
          <Field name="mediaStorageUsage" path="media.storageUsage" description="Media storage usage statistics"/>
          <Field name="mediaCategories" path="media.categories" description="Media category filters"/>
        </Contract>
        <Config>
          <Handler>admin-settings.settings.overview</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="save-settings" kind="metadata.service">
        <Config>
          <Handler>admin-settings.settings.overview.save</Handler>
          <SuccessMessage>Settings synced across every campus.</SuccessMessage>
          <UpdateMessage>Admin settings updated.</UpdateMessage>
          <ErrorMessage>We couldn&apos;t persist your settings. Try again shortly.</ErrorMessage>
          <IdentifierKey>tenantId</IdentifierKey>
          <IdentifierCandidates>
            <Array>
              <Value>tenantId</Value>
              <Value>data.tenantId</Value>
              <Value>params.tenantId</Value>
            </Array>
          </IdentifierCandidates>
          <RedirectTemplate>/admin/settings</RedirectTemplate>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
