<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition
  kind="blueprint"
  module="admin-community"
  route="planning/scheduler/calendar"
  schemaVersion="1.0.0"
  contentVersion="1.0.0"
  featureCode="scheduler.core"
  requiredPermissions="scheduler:view"
  locale="en-US">

  <Page id="admin-community-scheduler-calendar">
    <Title>Schedule Calendar</Title>

    <Regions>
      <Region id="main">
        <!-- Hero section -->
        <Component id="calendar-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">minimal</Prop>
            <Prop name="eyebrow" kind="static">Scheduler</Prop>
            <Prop name="headline" kind="static">Schedule Calendar</Prop>
            <Prop name="description" kind="static">View all scheduled events and occurrences in calendar format.</Prop>
            <Prop name="secondaryCta" kind="action" actionId="back-to-dashboard"/>
          </Props>
        </Component>

        <!-- Calendar view component -->
        <Component id="schedule-calendar" type="ScheduleCalendarView">
          <Props>
            <Prop name="className" kind="static">mt-6</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>

    <Actions>
      <Action id="back-to-dashboard" kind="link">
        <Config>
          <Label>Back to Dashboard</Label>
          <Url>/admin/community/planning/scheduler</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
