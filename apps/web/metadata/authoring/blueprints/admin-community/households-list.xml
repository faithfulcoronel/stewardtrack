<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-community" route="households/list" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="members.household" requiredPermissions="households:view" locale="en-US">
  <Page id="admin-community-households-list">
    <Title>Household directory</Title>
    <Regions>
      <Region id="main">
        <Component id="list-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="listHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="listHero.headline"/>
            <Prop name="description" kind="binding" contract="listHero.description"/>
            <Prop name="metrics" kind="binding" contract="listHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="launch-new-household"/>
            <Prop name="secondaryCta" kind="action" actionId="open-dashboard"/>
          </Props>
        </Component>
        <Component id="households-grid" type="AdminAgGrid">
          <Props>
            <Prop name="title" kind="static">Household roster</Prop>
            <Prop name="description" kind="static">Search and manage household records with envelope numbers and address information.</Prop>
            <Prop name="rows" kind="binding" contract="householdsTable.rows"/>
            <Prop name="columns" kind="binding" contract="householdsTable.columns"/>
            <Prop name="filters" kind="binding" contract="householdsTable.filters"/>
            <Prop name="actions" kind="binding" contract="householdsTable.actions"/>
            <Prop name="emptyState" kind="static">{"title": "No households found", "description": "Try adjusting your search or create a new household record."}</Prop>
            <Prop name="userPermissions" kind="expression">permissions</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="listHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="hero.eyebrow" description="Binding for list-hero.eyebrow"/>
          <Field name="headline" path="hero.headline" description="Binding for list-hero.headline"/>
          <Field name="description" path="hero.description" description="Binding for list-hero.description"/>
          <Field name="metrics" path="hero.metrics" description="Binding for list-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-community.households.list.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="householdsTable" kind="service">
        <Contract>
          <Field name="rows" path="table.rows" description="Binding for households-grid.rows"/>
          <Field name="columns" path="table.columns" description="Binding for households-grid.columns"/>
          <Field name="filters" path="table.filters" description="Binding for households-grid.filters"/>
          <Field name="actions" path="table.actions" description="Binding for households-grid.actions"/>
        </Contract>
        <Config>
          <Handler>admin-community.households.list.table</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="launch-new-household" kind="link">
        <RBAC requirePermissions="households:manage"/>
        <Config>
          <Label>Add household</Label>
          <Url>/admin/community/households/manage</Url>
        </Config>
      </Action>
      <Action id="open-dashboard" kind="link">
        <Config>
          <Label>Dashboard</Label>
          <Url>/admin/members</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
