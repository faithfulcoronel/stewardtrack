<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-community" route="families/profile" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="families.core" requiredPermissions="members:view" locale="en-US">
  <Page id="admin-community-families-profile">
    <Title>Family profile</Title>
    <Regions>
      <Region id="main">
        <Component id="profile-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">split</Prop>
            <Prop name="eyebrow" kind="binding" contract="profileHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="profileHero.headline"/>
            <Prop name="description" kind="binding" contract="profileHero.description"/>
            <Prop name="metrics" kind="binding" contract="profileHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="edit-family"/>
            <Prop name="secondaryCta" kind="action" actionId="back-to-list"/>
          </Props>
        </Component>
        <Component id="profile-summary" type="AdminDetailPanels">
          <Props>
            <Prop name="columns" kind="static">2</Prop>
            <Prop name="panels" kind="binding" contract="profileSummary.panels"/>
          </Props>
        </Component>
        <Component id="family-members" type="AdminDataGridSection">
          <Props>
            <Prop name="title" kind="static">Family members</Prop>
            <Prop name="description" kind="static">Members belonging to this family and their roles.</Prop>
            <Prop name="rows" kind="binding" contract="familyMembers.rows"/>
            <Prop name="columns" kind="binding" contract="familyMembers.columns"/>
            <Prop name="actions" kind="binding" contract="familyMembers.actions"/>
            <Prop name="emptyState" kind="static">{"title": "No members in this family", "description": "Add members to this family from their individual profiles."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="profileHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="hero.eyebrow" description="Binding for profile-hero.eyebrow"/>
          <Field name="headline" path="hero.headline" description="Binding for profile-hero.headline"/>
          <Field name="description" path="hero.description" description="Binding for profile-hero.description"/>
          <Field name="metrics" path="hero.metrics" description="Binding for profile-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-community.families.profile.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="profileSummary" kind="service">
        <Contract>
          <Field name="panels" path="summary.panels" description="Binding for profile-summary.panels"/>
        </Contract>
        <Config>
          <Handler>admin-community.families.profile.summary</Handler>
        </Config>
      </DataSource>
      <DataSource id="familyMembers" kind="service">
        <Contract>
          <Field name="rows" path="members.rows" description="Binding for family-members.rows"/>
          <Field name="columns" path="members.columns" description="Binding for family-members.columns"/>
          <Field name="actions" path="members.actions" description="Binding for family-members.actions"/>
        </Contract>
        <Config>
          <Handler>admin-community.families.profile.members</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="edit-family" kind="link">
        <Config>
          <Label>Edit family</Label>
          <Url>/admin/community/families/manage?familyId={{params.familyId}}</Url>
        </Config>
      </Action>
      <Action id="back-to-list" kind="link">
        <Config>
          <Label>Back to list</Label>
          <Url>/admin/community/families</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
