<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-community" route="accounts/list" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="accounts.core" requiredPermissions="accounts:view" locale="en-US">
  <Page id="admin-community-accounts-list">
    <Title>Account directory</Title>
    <Regions>
      <Region id="main">
        <Component id="list-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="listHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="listHero.headline"/>
            <Prop name="description" kind="binding" contract="listHero.description"/>
            <Prop name="metrics" kind="binding" contract="listHero.metrics"/>
            <Prop name="primaryCta" kind="action" actionId="launch-new-account"/>
            <Prop name="secondaryCta" kind="action" actionId="open-dashboard"/>
          </Props>
        </Component>
        <Component id="accounts-grid" type="AdminAgGrid">
          <Props>
            <Prop name="title" kind="static">Account roster</Prop>
            <Prop name="description" kind="static">Search and manage account records for organizations and individuals.</Prop>
            <Prop name="rows" kind="binding" contract="accountsTable.rows"/>
            <Prop name="columns" kind="binding" contract="accountsTable.columns"/>
            <Prop name="filters" kind="binding" contract="accountsTable.filters"/>
            <Prop name="emptyState" kind="static">{"title": "No accounts found", "description": "Try adjusting your search or create a new account record."}</Prop>
          </Props>
        </Component>
      </Region>
    </Regions>
    <DataSources>
      <DataSource id="listHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="hero.eyebrow" description="Binding for list-hero.eyebrow"/>
          <Field name="headline" path="hero.headline" description="Binding for list-hero.headline"/>
          <Field name="description" path="hero.description" description="Binding for list-hero.description"/>
          <Field name="metrics" path="hero.metrics" description="Binding for list-hero.metrics"/>
        </Contract>
        <Config>
          <Handler>admin-community.accounts.list.hero</Handler>
        </Config>
      </DataSource>
      <DataSource id="accountsTable" kind="service">
        <Contract>
          <Field name="rows" path="table.rows" description="Binding for accounts-grid.rows"/>
          <Field name="columns" path="table.columns" description="Binding for accounts-grid.columns"/>
          <Field name="filters" path="table.filters" description="Binding for accounts-grid.filters"/>
        </Contract>
        <Config>
          <Handler>admin-community.accounts.list.table</Handler>
        </Config>
      </DataSource>
    </DataSources>
    <Actions>
      <Action id="launch-new-account" kind="link">
        <RBAC requirePermissions="accounts:manage" />
        <Config>
          <Label>Add account</Label>
          <Url>/admin/community/accounts/manage</Url>
        </Config>
      </Action>
      <Action id="open-dashboard" kind="link">
        <Config>
          <Label>Dashboard</Label>
          <Url>/admin/members</Url>
          <Variant>secondary</Variant>
        </Config>
      </Action>
    </Actions>
  </Page>
</PageDefinition>
