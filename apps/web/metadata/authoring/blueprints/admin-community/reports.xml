<?xml version="1.0" encoding="UTF-8"?>
<PageDefinition kind="blueprint" module="admin-community" route="reports" schemaVersion="1.0.0" contentVersion="1.0.0" featureCode="members.core" requiredPermissions="members:view" locale="en-US">
  <Page id="admin-community-reports">
    <Title>Member Intelligence Reports</Title>
    <Regions>
      <Region id="main">
        <!-- Hero Section -->
        <Component id="reports-hero" type="HeroSection">
          <Props>
            <Prop name="variant" kind="static">stats-panel</Prop>
            <Prop name="eyebrow" kind="binding" contract="reportsHero.eyebrow"/>
            <Prop name="headline" kind="binding" contract="reportsHero.headline"/>
            <Prop name="description" kind="binding" contract="reportsHero.description"/>
            <Prop name="metrics" kind="binding" contract="reportsHero.metrics"/>
          </Props>
        </Component>

        <!-- Key Metrics -->
        <Component id="key-metrics" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Key Performance Indicators</Prop>
            <Prop name="description" kind="static">Track the vital signs of your congregation across membership, engagement, and spiritual growth.</Prop>
            <Prop name="metrics" kind="binding" contract="keyMetrics.items"/>
          </Props>
        </Component>

        <!-- Membership Status Chart -->
        <Component id="membership-status-chart" type="AdminReportChartsSection">
          <Props>
            <Prop name="title" kind="static">Membership Overview</Prop>
            <Prop name="description" kind="static">Distribution of members by status and type</Prop>
            <Prop name="charts" kind="binding" contract="membershipCharts.charts"/>
          </Props>
        </Component>

        <!-- Growth Trend Chart -->
        <Component id="growth-trend-chart" type="AdminReportChartsSection">
          <Props>
            <Prop name="title" kind="static">Growth Trends</Prop>
            <Prop name="description" kind="static">Track membership growth and new member acquisition over time</Prop>
            <Prop name="charts" kind="binding" contract="growthTrend.charts"/>
          </Props>
        </Component>

        <!-- Family Insights -->
        <Component id="family-insights-chart" type="AdminReportChartsSection">
          <Props>
            <Prop name="title" kind="static">Family Insights</Prop>
            <Prop name="description" kind="static">Understand family structure and household dynamics</Prop>
            <Prop name="charts" kind="binding" contract="familyInsights.charts"/>
          </Props>
        </Component>

        <!-- Engagement Summary -->
        <Component id="engagement-summary" type="AdminMetricCards">
          <Props>
            <Prop name="title" kind="static">Engagement &amp; Discipleship</Prop>
            <Prop name="description" kind="static">Overview of member involvement in care, discipleship, and serving.</Prop>
            <Prop name="metrics" kind="binding" contract="engagementSummary.items"/>
          </Props>
        </Component>

        <!-- Engagement Charts -->
        <Component id="engagement-charts" type="AdminReportChartsSection">
          <Props>
            <Prop name="title" kind="static">Ministry Engagement Details</Prop>
            <Prop name="description" kind="static">Breakdown of care plans and discipleship pathways</Prop>
            <Prop name="charts" kind="binding" contract="engagementCharts.charts"/>
          </Props>
        </Component>

        <!-- Campus Distribution -->
        <Component id="campus-distribution-chart" type="AdminReportChartsSection">
          <Props>
            <Prop name="title" kind="static">Campus Distribution</Prop>
            <Prop name="description" kind="static">Member distribution across campuses and centers</Prop>
            <Prop name="charts" kind="binding" contract="centerDistribution.charts"/>
          </Props>
        </Component>
      </Region>
    </Regions>

    <DataSources>
      <!-- Hero Data -->
      <DataSource id="reportsHero" kind="service">
        <Contract>
          <Field name="eyebrow" path="eyebrow"/>
          <Field name="headline" path="headline"/>
          <Field name="description" path="description"/>
          <Field name="metrics" path="metrics"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.hero</Handler>
        </Config>
      </DataSource>

      <!-- Key Metrics -->
      <DataSource id="keyMetrics" kind="service">
        <Contract>
          <Field name="items" path="items"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.keyMetrics</Handler>
        </Config>
      </DataSource>

      <!-- Membership Charts -->
      <DataSource id="membershipCharts" kind="service">
        <Contract>
          <Field name="charts" path="charts"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.membershipCharts</Handler>
        </Config>
      </DataSource>

      <!-- Growth Trend -->
      <DataSource id="growthTrend" kind="service">
        <Contract>
          <Field name="charts" path="charts"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.growthTrendCharts</Handler>
        </Config>
      </DataSource>

      <!-- Family Insights -->
      <DataSource id="familyInsights" kind="service">
        <Contract>
          <Field name="charts" path="charts"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.familyInsightsCharts</Handler>
        </Config>
      </DataSource>

      <!-- Engagement Summary -->
      <DataSource id="engagementSummary" kind="service">
        <Contract>
          <Field name="items" path="items"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.engagementSummary</Handler>
        </Config>
      </DataSource>

      <!-- Engagement Charts -->
      <DataSource id="engagementCharts" kind="service">
        <Contract>
          <Field name="charts" path="charts"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.engagementCharts</Handler>
        </Config>
      </DataSource>

      <!-- Center Distribution -->
      <DataSource id="centerDistribution" kind="service">
        <Contract>
          <Field name="charts" path="charts"/>
        </Contract>
        <Config>
          <Handler>admin-community.reports.centerDistributionCharts</Handler>
        </Config>
      </DataSource>
    </DataSources>
  </Page>
</PageDefinition>
